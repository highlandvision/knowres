<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/components/com_knowres/models/fields">
	<fieldset name="details">
		<field name="arrival"
			filter="string"
			required="true"
			type="fdatepicker"
			label="COM_KNOWRES_ARRIVAL"/>
		<field name="departure"
			filter="string"
			required="true"
			type="fdatepicker"
			label="COM_KNOWRES_DEPARTURE"/>
		<field name="firstname"
			filter="string"
			type="text"
			label="COM_KNOWRES_FIRSTNAME_DSC"/>
		<field name="surname"
			filter="string"
			type="text"
			label="COM_KNOWRES_SURNAME_DSC"/>
		<field name="address1"
			filter="string"
			type="text"
			label="COM_KNOWRES_ADDRESS1_DSC"/>
		<field name="address2"
			filter="string"
			type="text"
			label="COM_KNOWRES_ADDRESS2_DSC"/>
		<field name="town"
			filter="string"
			type="text"
			label="COM_KNOWRES_TOWN_DSC"/>
		<field name="country_id"
			ajaxname="country_id"
			class="countrychain"
			filter="integer"
			target="jform_region_id"
			type="combocountry"
			label="COM_KNOWRES_COUNTRY_DSC"/>
		<field name="region_id"
			filter="integer"
			type="comboregion"
			label="COM_KNOWRES_REGION_DSC"/>
		<field name="postcode"
			filter="string"
			type="text"
			label="COM_KNOWRES_POSTCODE_DSC"/>
		<field name="email"
			filter="string"
			required="true"
			type="kremail"
			label="COM_KNOWRES_CONTACT_EMAIL_DSC"/>
		<field name="verify_email"
			field="email"
			filter="string"
			required="true"
			type="kremail"
			validate="equals"
			label="COM_KNOWRES_CONTACT_EMAIL_CONFIRM_DSC"/>
		<field name="mobile_country_id"
			filter="integer"
			type="dialcode"
			label="COM_KNOWRES_FORM_DESC_GUEST_MOBILE_COUNTRY"/>
		<field name="mobile"
			filter="string"
			type="text"
			label="COM_KNOWRES_LBL_GUEST_MOBILE"/>
		<field name="guest_note"
			cols="50"
			filter="string"
			rows="8"
			type="textarea"
			label="COM_KNOWRES_CONTACT_MESSAGE_LBL"
			hint="COM_KNOWRES_CONTACT_MESSAGE_DSC"/>
		<field name="day"
			default="1"
			filter="integer"
			required="true"
			type="number"
			min="1"
			max="31"
			label="COM_KNOWRES_DAY"/>
		<field name="month"
			filter="integer"
			required="true"
			type="listselectmonth"
			label="COM_KNOWRES_CONTACT_MONTH_LBL"/>
		<field name="nights"
			default="7"
			min="1"
			max="45"
			step="1"
			required="true"
			type="number"
			label="COM_KNOWRES_CONTACT_NIGHTS_LBL"/>
		<field name="guest_types"
			default=""
			filter="string"
			type="jsonguesttypes"
			label="COM_KNOWRES_CONTACT_GUESTS_LBL">
		</field>
		<field name="rooms"
			default=""
			filter="string"
			type="jsonrooms"
			label="COM_KNOWRES_CONTACT_GUESTS_LBL">
		</field>
		<field name="extras"
			default=""
			filter="string"
			type="jsaextras"
			label="COM_KNOWRES_CONTACT_GUESTS_LBL">
		</field>
	</fieldset>
	<fieldset name="recaptcha">
		<field name="grecaptcha"
			filter="string"
			type="grecaptcha"
			label="COM_KNOWRES_CONTACT_RECAPTCHA_LBL"/>
	</fieldset>
</form>