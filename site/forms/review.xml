<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Site\Field">
	<fieldset>
		<field name="guest_name"
			filter="string"
			type="text"
			label="COM_KNOWRES_REVIEW_GUEST_NAME_F_LBL"
			hint="COM_KNOWRES_REVIEW_GUEST_NAME_F_DSC"/>
		<field name="guest_location"
			filter="string"
			type="text"
			label="COM_KNOWRES_REVIEW_GUEST_LOCATION_F_LBL"
			hint="COM_KNOWRES_REVIEW_GUEST_LOCATION_F_DSC"/>
		<field name="title"
			filter="string"
			type="text"
			label="COM_KNOWRES_REVIEW_TITLE_LBL"
			hint="COM_KNOWRES_REVIEW_TITLE_DSC"/>
		<field name="review"
			filter="string"
			rows="8"
			type="textarea"
			label="COM_KNOWRES_REVIEW_REVIEW_LBL"
			hint="COM_KNOWRES_REVIEW_REVIEW_DSC"/>
		<field name="rating1"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating2"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating3"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating4"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating5"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating6"
			class="kr-rating"
			default="10"
			filter="integer"
			first="1"
			last="10"
			step="1"
			type="integer"/>
		<field name="rating"
			default="0.00"
			filter="string"
			type="text"
			label="COM_KNOWRES_REVIEW_RATING_LBL"
			description="COM_KNOWRES_REVIEW_RATING_DSC"/>
		<field name="held"
			default="0"
			filter="integer"
			type="hidden"/>
		<field name="approved"
			default="0"
			filter="integer"
			type="hidden"/>
		<field name="state"
			default="0"
			filter="integer"
			type="hidden"/>
		<field name="id"
			default="0"
			type="hidden"/>
		<field name="contract_id"
			filter="integer"
			type="hidden"/>
		<field name="property_id"
			filter="integer"
			type="hidden"/>
		<field name="review_date"
			filter="string"
			type="hidden"/>
	</fieldset>
</form>