<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Site\Field">
	<fieldset>
		<field name="guest_name"
		       type="text"
		       filter="string"
		       label="COM_KNOWRES_REVIEW_GUEST_NAME_F_LBL"
		       hint="COM_KNOWRES_REVIEW_GUEST_NAME_F_DSC"/>
		<field name="guest_location"
		       type="text"
		       filter="string"
		       label="COM_KNOWRES_REVIEW_GUEST_LOCATION_F_LBL"
		       hint="COM_KNOWRES_REVIEW_GUEST_LOCATION_F_DSC"/>
		<field name="title"
		       type="text"
		       filter="string"
		       label="COM_KNOWRES_REVIEW_TITLE_LBL"
		       hint="COM_KNOWRES_REVIEW_TITLE_DSC"/>
		<field name="review"
		       type="textarea"
		       filter="string"
		       rows="8"
		       label="COM_KNOWRES_REVIEW_REVIEW_LBL"
		       hint="COM_KNOWRES_REVIEW_REVIEW_DSC"/>
		<field name="rating1"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating2"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating3"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating4"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating5"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating6"
		       type="integer"
		       class="kr-rating"
		       default="10"
		       filter="integer"
		       first="1"
		       last="10"
		       step="1"/>
		<field name="rating"
		       type="text"
		       default="0.00"
		       filter="string"
		       label="COM_KNOWRES_REVIEW_RATING_LBL"
		       description="COM_KNOWRES_REVIEW_RATING_DSC"/>
		<field name="held"
		       type="hidden"
		       default="0"
		       filter="integer"/>
		<field name="approved"
		       type="hidden"
		       default="0"
		       filter="integer"/>
		<field name="state"
		       type="hidden"
		       default="0"
		       filter="integer"/>
		<field name="id"
		       type="hidden"
		       default="0"/>
		<field name="contract_id"
		       type="hidden"
		       filter="integer"/>
		<field name="property_id"
		       type="hidden"
		       filter="integer"/>
		<field name="review_date"
		       type="hidden"
		       filter="string"/>
	</fieldset>
</form>