<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset>
		<field name="region_id"
			addfieldprefix="HighlandVision\Component\Knowres\Site\Field"
			aria-label="MOD_KNOWRES_SEARCH_REGIONS_LBL_ARIA"
			hiddenLabel="true"
			type="listgroupedregions"
			hint="MOD_KNOWRES_SEARCH_REGIONS_LBL"
			label="MOD_KNOWRES_SEARCH_REGIONS"/>
		<field name="arrivaldsp"
			addfieldprefix="HighlandVision\Component\Knowres\Site\Field"
			class="notranslate datepicker"
			filter="string"
			hiddenLabel="true"
			type="mobisearch"
			hint="MOD_KNOWRES_SEARCH_ARRIVAL"
			label="MOD_KNOWRES_SEARCH_ARRIVAL"/>
		<field name="departuredsp"
			addfieldprefix="HighlandVision\Component\Knowres\Site\Field"
			class="notranslate datepicker"
			filter="string"
			hiddenLabel="true"
			type="mobisearch"
			hint="MOD_KNOWRES_SEARCH_DEPARTURE"
			label="MOD_KNOWRES_SEARCH_DEPARTURE"/>
		<field name="guests"
			addfieldprefix="HighlandVision\Component\Knowres\Site\Field"
			default="2"
			hiddenLabel="true"
			type="listguests"
			label="MOD_KNOWRES_SEARCH_GUESTS">
			<option value="1">MOD_KNOWRES_SEARCH_ANY</option>
		</field>
		<field name="bedrooms"
			default="0"
			hiddenLabel="true"
			type="list"
			label="MOD_KNOWRES_SEARCH_BEDROOMS_LBL_ARIA">
			<option value="0">MOD_KNOWRES_SEARCH_BEDROOMS_LABEL</option>
			<option value="1">MOD_KNOWRES_SEARCH_BEDROOMS_1, 1</option>
			<option value="2">MOD_KNOWRES_SEARCH_BEDROOMS, 2</option>
			<option value="3">MOD_KNOWRES_SEARCH_BEDROOMS, 3</option>
			<option value="4">MOD_KNOWRES_SEARCH_BEDROOMS, 4</option>
			<option value="5">MOD_KNOWRES_SEARCH_BEDROOMS, 5</option>
			<option value="6">MOD_KNOWRES_SEARCH_BEDROOMS, 6</option>
		</field>
		<field name="type_id"
			addfieldprefix="HighlandVision\Component\Knowres\Site\Field"
			default="0"
			hiddenLabel="true"
			type="listpropertytypes"
			label="MOD_KNOWRES_SEARCH_TYPES"/>
		<field name="flexible"
			default="0"
			hiddenLabel="true"
			type="list"
			label="MOD_KNOWRES_SEARCH_FLEXIBILE_LBL_ARIA">
			<option value="0">MOD_KNOWRES_SEARCH_FLEXIBLE_FIXED</option>
			<option value="1">MOD_KNOWRES_SEARCH_FLEXIBLE_1, 1</option>
			<option value="2">MOD_KNOWRES_SEARCH_FLEXIBLE, 2</option>
			<option value="3">MOD_KNOWRES_SEARCH_FLEXIBLE, 3</option>
			<option value="7">MOD_KNOWRES_SEARCH_FLEXIBLE, 7</option>
			<option value="14">MOD_KNOWRES_SEARCH_FLEXIBLE, 14</option>
		</field>
		<field name="arrival"
			filter="string"
			type="hidden"/>
		<field name="departure"
			filter="string"
			type="hidden"/>
	</fieldset>
</form>