<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_EMAILTRIGGER_NAME_DSC"
			filter="string"/>
		<field name="trigger_actual"
			type="listtriggeractual"
			required="true"
			onload="toggleCron();"
			onchange="toggleCron();"
			filter="string"
			label="COM_KNOWRES_EMAILTRIGGER_TRIGGER_ACTUAL_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_TRIGGER_ACTUAL_DSC"/>
		<field name="email_template_id"
			type="listforeignkeytranslate"
			translation_item="emailtemplate"
			table="#__knowres_email_template"
			key_field="id"
			value_field="name"
			required="true"
			label="COM_KNOWRES_EMAILTRIGGER_EMAIL_TEMPLATE_ID_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_EMAIL_TEMPLATE_ID_DSC">
			<option value="">COM_KNOWRES_SELECT_REQUIRED</option>
		</field>
	</fieldset>
	<fieldset name="krcron">
		<field name="trigger_cron"
			default=""
			filter="string"
			type="list"
			label="COM_KNOWRES_EMAILTRIGGER_TRIGGER_CRON_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_TRIGGER_CRON_DSC">
			<option value="">COM_KNOWRES_SELECT</option>
			<option value="expiry_date">COM_KNOWRES_CONTRACTS_EXPIRY_DATE</option>
			<option value="balance_date">COM_KNOWRES_CONTRACTS_BALANCE_DATE</option>
			<option value="arrival">COM_KNOWRES_CONTRACTS_ARRIVAL</option>
			<option value="departure">COM_KNOWRES_CONTRACTS_DEPARTURE</option>
		</field>
		<field name="days"
			class="input-mini"
			default="0"
			filter="integer"
			required="true"
			type="text"
			label="COM_KNOWRES_EMAILTRIGGER_DAYS_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_DAYS_DSC"/>
		<field name="days_before"
			class="btn-group btn-group-yesno"
			default="0"
			required="true"
			type="radio"
			label="COM_KNOWRES_EMAILTRIGGER_DAYS_BEFORE_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_DAYS_BEFORE_DSC">
			<option value="1">COM_KNOWRES_BEFORE</option>
			<option value="0">COM_KNOWRES_AFTER</option>
		</field>
	</fieldset>
	<fieldset name="krcron1">
		<field name="booking_status"
			default="0"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			type="list"
			label="COM_KNOWRES_EMAILTRIGGER_BOOKING_STATUS_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_BOOKING_STATUS_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE">
			<option value="0">COM_KNOWRES_SELECT</option>
			<option value="1">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_1</option>
			<option value="5">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_5</option>
			<option value="10">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_10</option>
			<option value="30">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_30</option>
			<option value="35">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_35</option>
			<option value="39">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_39</option>
			<option value="40">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_40</option>
			<option value="99">COM_KNOWRES_CONTRACTS_BOOKING_STATUS_99</option>
		</field>
	</fieldset>
	<fieldset name="krsend">
		<field name="send_guest"
			class="btn-group btn-group-yesno"
			default="0"
			required="true"
			type="radio"
			label="COM_KNOWRES_EMAILTRIGGER_SEND_GUEST_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_SEND_GUEST_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="send_owner"
			type="radio"
			default="0"
			required="true"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_EMAILTRIGGER_SEND_OWNER_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_SEND_OWNER_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="send_caretaker"
			type="radio"
			default="0"
			required="true"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_EMAILTRIGGER_SEND_CARETAKER_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_SEND_CARETAKER_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="send_agency"
			type="radio"
			default="0"
			required="true"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_EMAILTRIGGER_SEND_AGENCY_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_SEND_AGENCY_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="send_admin"
			type="radio"
			default="0"
			required="true"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_EMAILTRIGGER_SEND_ADMIN_LBL"
			description="COM_KNOWRES_EMAILTRIGGER_SEND_ADMIN_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>