<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krguestinfo">
		<field name="guestinfo"
			filter="string"
			hiddenLabel="true"
			layout='form.field.json.guestinfo'
			type="jsonguestinfo"
			label="COM_KNOWRES_CONTRACTGUESTDATA_GUESTINFO_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_GUESTINFO_DSC"/>
	</fieldset>
	<fieldset name="krcontact">
		<field name="c_name"
			filter="string"
			hiddenDescription="true"
			type="text"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_CONTRACTGUESTDATA_CONTACT_NAME_DSC"/>
		<field name="c_phone"
			filter="string"
			hiddenDescription="true"
			type="text"
			label="COM_KNOWRES_TELEPHONE"
			description="COM_KNOWRES_CONTRACTGUESTDATA_CONTACT_PHONE_DSC"/>
		<field name="c_email"
			filter="email"
			hiddenDescription="true"
			type="email"
			label="COM_KNOWRES_CONTRACTGUESTDATA_CONTACT_EMAIL_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_CONTACT_EMAIL_DSC"/>
	</fieldset>
	<fieldset name="krarrival">
		<field name="arrival_means"
			class="w-auto"
			default=""
			filter="string"
			hiddenDescription="true"
			type="list"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_MEANS_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_MEANS_DSC">
			<option value="">COM_KNOWRES_PLEASE_SELECT</option>
			<option value="air">COM_KNOWRES_CONTRACTGUESTDATA_AIR</option>
			<option value="train">COM_KNOWRES_CONTRACTGUESTDATA_TRAIN</option>
			<option value="auto">COM_KNOWRES_CONTRACTGUESTDATA_AUTO</option>
			<option value="other">COM_KNOWRES_CONTRACTGUESTDATA_OTHER</option>
		</field>
	</fieldset>
	<fieldset name="krarrivalair">
		<field name="arrival_air"
			addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
			filter="string"
			layout="form.field.json.generic"
			showon="arrival_means:air"
			type="jsonarrivalair"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_AIR_LBL"/>
	</fieldset>
	<fieldset name="krarrivaltrain">
		<field name="arrival_from"
			filter="string"
			hiddenLabel="true"
			showon="arrival_means:train"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_FROM_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_FROM_DSC"/>
		<field name="arrival_place"
			filter="string"
			hiddenLabel="true"
			showon="arrival_means:train"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_PLACE_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_PLACE_DSC"/>
		<field name="arrival_time"
			filter="string"
			hiddenLabel="true"
			showon="arrival_means:train"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_TIME_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_TIME_DSC"/>
	</fieldset>
	<fieldset name="krarrivalauto">
		<field name="auto_arrival_from"
			filter="string"
			hiddenLabel="true"
			showon="arrival_means:auto"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_AUTO_ARRIVAL_FROM_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_AUTO_ARRIVAL_FROM_DSC"/>
		<field name="auto_arrival_time"
			filter="string"
			hiddenLabel="true"
			showon="arrival_means:auto"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_TIME_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_ARRIVAL_TIME_DSC"/>
	</fieldset>
	<fieldset name="krarrivalother">
		<field name="other_information"
			class="w-auto"
			filter="string"
			hiddenDescription="true"
			cols="50"
			rows="6"
			showon="arrival_means:other"
			type="textarea"
			label="COM_KNOWRES_CONTRACTGUESTDATA_OTHER_INFORMATION_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_OTHER_INFORMATION_DSC"/>
	</fieldset>
	<fieldset name="krdeparture">
		<field name="departure_time"
			filter="string"
			hiddenLabel="true"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_TIME_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_TIME_DSC"/>
		<field name="departure_means"
			default=""
			filter="string"
			hiddenLabel="true"
			type="list"
			label="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_MEANS_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_MEANS_DSC">
			<option value="">COM_KNOWRES_PLEASE_SELECT</option>
			<option value="air">COM_KNOWRES_CONTRACTGUESTDATA_AIR</option>
			<option value="train">COM_KNOWRES_CONTRACTGUESTDATA_TRAIN</option>
			<option value="auto">COM_KNOWRES_CONTRACTGUESTDATA_AUTO</option>
			<option value="other">COM_KNOWRES_CONTRACTGUESTDATA_OTHER</option>
		</field>
		<field name="departure_number"
			filter="string"
			hiddenLabel="true"
			type="text"
			label="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_NUMBER_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_DEPARTURE_NUMBER_DSC"/>
	</fieldset>
	<fieldset name="kroptions">
		<field name="options"
			filter="string"
			hiddenDescription="true"
			hiddenLabel="true"
			type="jsonoptions"
			label="COM_KNOWRES_CONTRACTGUESTDATA_OPTIONS_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_OPTIONS_DSC"/>
	</fieldset>
	<fieldset name="krpreferences">
		<field name="preferences"
			filter="string"
			hiddenDescription="true"
			type="textarea"
			rows="6"
			cols="15"
			label="COM_KNOWRES_CONTRACTGUESTDATA_PREFERENCES_LBL"
			description="COM_KNOWRES_CONTRACTGUESTDATA_PREFERENCES_DSC"/>
	</fieldset>
	<fieldset>
		<field name="contract_id"
			filter="integer"
			type="hidden"/>
		<field name="guest_id"
			filter="integer"
			type="hidden"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			class="input-mini"
			filter="unset"
			readonly="true"
			size="6"
			type="text"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>