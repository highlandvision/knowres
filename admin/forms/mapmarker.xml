<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_MAPMARKER_NAME_DSC"/>
		<field name="description"
			type="text"
			filter="string"
			label="COM_KNOWRES_MAPMARKER_DESCRIPTION_LBL"
			description="COM_KNOWRES_MAPMARKER_DESCRIPTION_DSC"/>
		<field name="map_category_id"
			type="listforeignkeytranslate"
			input_type="list"
			table="#__knowres_map_category"
			key_field="id"
			value_field="name"
			translation_item="mapcategory"
			required="true"
			label="COM_KNOWRES_MAPMARKER_CATEGORY_ID_LBL"
			description="COM_KNOWRES_MAPMARKER_CATEGORY_ID_DSC"/>

		<field name="country_id"
			allowproperty="1"
			class="countrychain"
			filter="integer"
			layout="joomla.form.field.list-fancy-select"
			onchange="comboGeo(this.value, 'mapmarker.combo', 'region');"
			required="true"
			type="combocountry"
			label="COM_KNOWRES_MAPMARKER_COUNTRY_ID_LBL"
			description="COM_KNOWRES_MAPMARKER_COUNTRY_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
			allowproperty="1"
			class="regionchain"
			filter="integer"
			layout="joomla.form.field.list-fancy-select"
			required="true"
			type="comboregion"
			label="COM_KNOWRES_MAPMARKER_REGION_LBL"
			description="COM_KNOWRES_MAPMARKER_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
	</fieldset>
	<fieldset name="krmap">
		<field name="lat"
			class="input-mini"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_MAPMARKER_LAT_LBL"
			description="COM_KNOWRES_MAPMARKER_LAT_DSC"/>
		<field name="lng"
			class="input-mini"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_MAPMARKER_LNG_LBL"
			description="COM_KNOWRES_MAPMARKER_LNG_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>