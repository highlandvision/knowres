<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_BEDTYPE_NAME_DSC"/>
		<field name="bedicon"
			type="media"
			required="true"
			filter="raw"
			directory="bedtypes"
			label="COM_KNOWRES_BEDTYPE_BEDICON_LBL"
			description="COM_KNOWRES_BEDTYPE_BEDICON_DSC"/>
		<field name="generic"
			type="list"
			required="true"
			label="COM_KNOWRES_BEDTYPE_GENERIC_LBL"
			description="COM_KNOWRES_BEDTYPE_GENERIC_DSC">
			<option value="single">COM_KNOWRES_BEDTYPE_GENERIC_SINGLE</option>
			<option value="twin">COM_KNOWRES_BEDTYPE_GENERIC_TWIN</option>
			<option value="double">COM_KNOWRES_BEDTYPE_GENERIC_DOUBLE</option>
			<option value="queen">COM_KNOWRES_BEDTYPE_GENERIC_QUEEN</option>
			<option value="king">COM_KNOWRES_BEDTYPE_GENERIC_KING</option>
			<option value="singlesofabed">COM_KNOWRES_BEDTYPE_GENERIC_SINGLESOFA</option>
			<option value="doublesofabed">COM_KNOWRES_BEDTYPE_GENERIC_DOUBLESOFA</option>
			<option value="extrabed1">COM_KNOWRES_BEDTYPE_GENERIC_EXTRABED1</option>
			<option value="extrabed2">COM_KNOWRES_BEDTYPE_GENERIC_EXTRABED2</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>