<?xml version="1.0" encoding="utf-8"?>
<form addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
    <fieldset name="custom">
        <field name="secret_key"
               filter="string"
               required="true"
               type="text"
               label="COM_KNOWRES_SERVICE_SECRET_KEY_LBL"
               description="COM_KNOWRES_SERVICE_SECRET_KEY_DSC"/>
        <field name="publishable_key"
               filter="string"
               required="true"
               type="text"
               label="COM_KNOWRES_SERVICE_PUBLISHABLE_KEY_LBL"
               description="COM_KNOWRES_SERVICE_PUBLISHABLE_KEY_DSC"/>
        <field name="webhook_key"
               filter="string"
               required="true"
               type="text"
               label="COM_KNOWRES_SERVICE_WEBHOOK_KEY_LBL"
               description="COM_KNOWRES_SERVICE_WEBHOOK_KEY_DSC"/>
        <field name="api_version"
               filter="string"
               type="text"
               label="COM_KNOWRES_SERVICE_STRIPE_VERSION_LBL"
               description="COM_KNOWRES_SERVICE_STRIPE_VERSION_DSC"/>
        <field name="description"
               filter="string"
               type="textarea"
               label="COM_KNOWRES_SERVICE_DESCRIPTION_LBL"
               description="COM_KNOWRES_SERVICE_DESCRIPTION_DSC"/>
        <field name="usesandbox"
               class="btn-group btn-group-yesno"
               default="0"
               type="radio"
               label="COM_KNOWRES_SERVICE_USESANDBOX_LBL"
               description="COM_KNOWRES_SERVICE_USESANDBOX_DSC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="accepted"
               layout="joomla.form.field.list-fancy-select"
               multiple="true"
               required="true"
               type="list"
               label="Select Accepted Cards"
               description="Select the cards that your Stripe account accepts"
               hint="COM_KNOWRES_SELECT_MULTIPLE">
            <option value="AMEX">Amex</option>
            <option value="CARTA_SI">Carta SI</option>
            <option value="CARTE_BLANCHE">Carta Blanche</option>
            <option value="CARTE_BLEU">Carte Bleu</option>
            <option value="DANKORT">Dankort</option>
            <option value="DELTA">Delta</option>
            <option value="DINERS">Diners</option>
            <option value="DISCOVER">Discover</option>
            <option value="ENROUTE">Enroute</option>
            <option value="JAL">JAL</option>
            <option value="JCB">JCB</option>
            <option value="LASER">Laser</option>
            <option value="MAESTRO_INTERNATIONAL">Maestro International</option>
            <option value="MAESTRO_UK">Maestro UK</option>
            <option value="MASTERCARD">Mastercard</option>
            <option value="VISA">Visa</option>
            <option value="VISA_ELECTRON">Visa Electron</option>
        </field>
        <field name="obd"
               class="btn-group btn-group-yesno"
               default="0"
               type="radio"
               label="COM_KNOWRES_SERVICE_OBD_LBL"
               description="COM_KNOWRES_SERVICE_OBD_DSC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="obr"
               class="btn-group btn-group-yesno"
               default="0"
               type="radio"
               label="COM_KNOWRES_SERVICE_OBR_LBL"
               description="COM_KNOWRES_SERVICE_OBR_DSC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="surcharge"
               class="input-mini"
               filter="string"
               type="text"
               label="COM_KNOWRES_SERVICE_SURCHARGE_LBL"
               description="COM_KNOWRES_SERVICE_SURCHARGE_DSC"/>
        <field name="surchargetype"
               class="btn-group btn-group-yesno"
               default="0"
               type="radio"
               label="COM_KNOWRES_SERVICE_SURCHARGETYPE_LBL"
               description="COM_KNOWRES_SERVICE_SURCHARGETYPE_DSC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="surchargedeposit"
               class="btn-group btn-group-yesno"
               default="0"
               type="radio"
               label="COM_KNOWRES_SERVICE_SURCHARGEDEPOSIT_LBL"
               description="COM_KNOWRES_SERVICE_SURCHARGEDEPOSIT_DSC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
</form>