<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_DISCOUNT_NAME_DSC"/>
		<field name="valid_from"
			class="input-mini"
			datepicker='{"minDate": "0", "maxDate": "+10Y", "altField": "#jform_valid_from"}'
			required="true"
			type="uicalendar"
			label="COM_KNOWRES_DISCOUNT_VALID_FROM_LBL"
			description="COM_KNOWRES_DISCOUNT_VALID_FROM_DSC"/>
		<field name="valid_to"
			class="input-mini"
			datepicker='{"minDate": "0", "maxDate": "+10Y", "altField": "#jform_valid_to"}'
			required="true"
			type="uicalendar"
			validate="daterange"
			label="COM_KNOWRES_DISCOUNT_VALID_TO_LBL"
			description="COM_KNOWRES_DISCOUNT_VALID_TO_DSC"/>
		<field name="discount"
			type="text"
			class="input-mini"
			label="COM_KNOWRES_DISCOUNT_DISCOUNT_LBL"
			description="COM_KNOWRES_DISCOUNT_DISCOUNT_DSC"
			default="0"
			required="true"
			filter="string"/>
		<field name="is_pc"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_DISCOUNT_IS_PC_LBL"
			description="COM_KNOWRES_DISCOUNT_IS_PC_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krcustom">
		<field name="model"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_DISCOUNT_MODEL_LBL"
			description="COM_KNOWRES_DISCOUNT_MODEL_DSC">
			<option value="0">COM_KNOWRES_DISCOUNT_DAY_RANGE</option>
			<option value="1">COM_KNOWRES_DISCOUNT_DATE_RANGE</option>
		</field>
		<field name="param1"
			default=""
			filter="string"
			type="hidden"/>
		<field name="param2"
			default=""
			filter="string"
			type="hidden"/>
		<field name="days_from"
			class="col-lg-3 input-mini"
			default="0"
			filter="integer"
			showon="model:0"
			type="text"
			label="COM_KNOWRES_DISCOUNT_DAYS_FROM_LBL"
			description="COM_KNOWRES_DISCOUNT_DAYS_FROM_DSC"/>
		<field name="days_to"
			class="col-lg-3 input-mini"
			default="0"
			filter="integer"
			showon="model:0"
			type="text"
			label="COM_KNOWRES_DISCOUNT_DAYS_TO_LBL"
			description="COM_KNOWRES_DISCOUNT_DAYS_TO_DSC"/>
		<field name="date_from"
			class="col-lg-3 input-mini"
			datepicker='{"minDate": "0", "maxDate": "+10Y", "altField": "#jform_date_from"}'
			showon="model:1"
			type="uicalendar"
			label="COM_KNOWRES_DISCOUNT_DATE_FROM_LBL"
			description="COM_KNOWRES_DISCOUNT_DATE_FROM_DSC"/>
		<field name="date_to"
			class="col-lg-3 input-mini"
			datepicker='{"minDate": "+1D", "maxDate": "+10Y", "altField": "#jform_date_to"}'
			showon="model:1"
			type="uicalendar"
			label="COM_KNOWRES_DISCOUNT_DATE_TO_LBL"
			description="COM_KNOWRES_DISCOUNT_DATE_TO_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
	<fieldset name="krspecial">
		<field name="property_id"
			type="text"
			filter="integer"/>
	</fieldset>
</form>