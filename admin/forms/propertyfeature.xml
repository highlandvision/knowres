<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			filter="string"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_PROPERTYFEATURE_NAME_DSC"/>
		<field name="generic"
			type="listgenericfeature"
			layout="joomla.form.field.list-fancy-select"
			label="COM_KNOWRES_PROPERTYFEATURE_GENERIC_LBL"
			description="COM_KNOWRES_PROPERTYFEATURE_GENERIC_DSC">
			<option value="">COM_KNOWRES_SELECT</option>
		</field>
		<field name="room_type"
			type="list"
			input_type="list"
			multiple="true"
			required="true"
			label="COM_KNOWRES_PROPERTYFEATURE_ROOM_TYPE_LBL"
			description="COM_KNOWRES_PROPERTYFEATURE_ROOM_TYPE_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE">
			<option value="property">COM_KNOWRES_PROPERTYFEATURES_ROOM_TYPE_PROPERTY</option>
			<option value="bathroom">COM_KNOWRES_PROPERTYROOM_GENERIC_BATHROOM</option>
			<option value="bedroom">COM_KNOWRES_PROPERTYROOM_GENERIC_BEDROOM</option>
			<option value="wc">COM_KNOWRES_PROPERTYROOM_GENERIC_WC</option>
			<option value="kitchen">COM_KNOWRES_PROPERTYROOM_GENERIC_KITCHEN</option>
			<option value="living">COM_KNOWRES_PROPERTYROOM_GENERIC_LIVING</option>
		</field>
		<field name="filter"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_PROPERTYFEATURE_FILTER_LBL"
			description="COM_KNOWRES_PROPERTYFEATURE_FILTER_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>