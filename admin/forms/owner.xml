<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			filter="string"
			required="true"
			label="COM_KNOWRES_OWNER_NAME_LBL"
			description="COM_KNOWRES_OWNER_NAME_DSC"/>
		<field name="business"
			class="btn-group btn-group-yesno"
			required="true"
			type="radio"
			label="COM_KNOWRES_OWNER_BUSINESS_LBL"
			description="COM_KNOWRES_OWNER_BUSINESS_DSC">
			<option value="0">COM_KNOWRES_FORM_OWNER_BUSINESS_0</option>
			<option value="1">COM_KNOWRES_FORM_OWNER_BUSINESS_1</option>
		</field>
		<field name="document_id"
			type="string"
			filter="string"
			required="true"
			label="COM_KNOWRES_OWNER_DOCUMENT_ID_LBL"
			description="COM_KNOWRES_OWNER_DOCUMENT_ID_DSC"/>
		<field name="document_type"
			type="string"
			filter="string"
			required="true"
			label="COM_KNOWRES_OWNER_DOCUMENT_TYPE_LBL"
			description="COM_KNOWRES_OWNER_DOCUMENT_TYPE_DSC"/>
		<field name="commission"
			type="text"
			addonAfter="%"
			class="input-mini"
			filter="string"
			label="COM_KNOWRES_OWNER_COMMISSION_LBL"
			description="COM_KNOWRES_OWNER_COMMISSION_DSC"/>
	</fieldset>
	<fieldset name="krcontact">
		<field name="email"
			type="email"
			filter="email"
			required="true"
			label="COM_KNOWRES_OWNER_EMAIL_LBL"
			description="COM_KNOWRES_OWNER_EMAIL_DSC"/>
		<field name="mobile_country_id"
			filter="integer"
			hiddenLabel="true"
			type="listdialcode"
			label="COM_KNOWRES_OWNER_MOBILE_COUNTRY_LBL"
			description="COM_KNOWRES_OWNER_MOBILE_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_PLEASE_SELECT</option>
		</field>
		<field name="mobile"
			filter="string"
			hiddenLabel="true"
			type="text"
			label="COM_KNOWRES_OWNER_MOBILE_LBL"
			description="COM_KNOWRES_OWNER_MOBILE_DSC"/>
	</fieldset>
	<fieldset name="kraddress">
		<field name="address1"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_ADDRESS1"
			description="COM_KNOWRES_ADDRESS1_DSC"/>
		<field name="address2"
			type="text"
			filter="string"
			label="COM_KNOWRES_ADDRESS2"
			description="COM_KNOWRES_ADDRESS2_DSC"/>
		<field name="town"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_TOWN"
			description="COM_KNOWRES_TOWN_DSC"/>
		<field name="postcode"
			type="text"
			filter="string"
			required="true"
			label="COM_KNOWRES_POSTCODE"
			description="COM_KNOWRES_POSTCODE_DSC"/>
		<field name="country_id"
			class="countrychain"
			filter="integer"
			onchange="comboGeo(this.value, 'owner.combo', 'region');"
			required="true"
			type="combocountry"
			label="COM_KNOWRES_COUNTRY"
			description="COM_KNOWRES_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
			class="regionchain"
			filter="integer"
			required="true"
			type="comboregion"
			label="COM_KNOWRES_REGION"
			description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
	</fieldset>
	<fieldset name="krfactura">
		<field name="invoice"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_OWNER_INVOICE_LBL"
			description="COM_KNOWRES_OWNER_INVOICE_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="foreign_key"
			type="text"
			label="COM_KNOWRES_OWNER_FOREIGN_KEY_LBL"
			description="COM_KNOWRES_OWNER_FOREIGN_KEY_DSC"/>
	</fieldset>
	<fieldset name="krxero">
		<field name="payment_schedule"
			default=""
			type="list"
			label="COM_KNOWRES_OWNERPAYMENT_SCHEDULE_LBL"
			description="COM_KNOWRES_OWNERPAYMENT_SCHEDULE_DSC">
			<option value="">COM_KNOWRES_FORM_OPTION_OWNERPAYMENTS_NONE</option>
			<option value="eom">COM_KNOWRES_FORM_OPTION_OWNERPAYMENTS_EOM</option>
			<option value="rgp">COM_KNOWRES_FORM_OPTION_OWNERPAYMENTS_RGP</option>
			<option value="dba">COM_KNOWRES_FORM_OPTION_OWNERPAYMENTS_DBA</option>
			<option value="dad">COM_KNOWRES_FORM_OPTION_OWNERPAYMENTS_DAD</option>
		</field>
		<field name="days"
			class="input-mini"
			filter="integer"
			showon="payment_schedule:dba,dad"
			type="number"
			label="COM_KNOWRES_OWNER_DAYS_LBL"
			description="COM_KNOWRES_OWNER_DAYS_DSC"/>
		<field name="pay_deposit"
			class="btn-group"
			default="0"
			showon="payment_schedule:eom,rgp,dba,dad"
			type="radio"
			label="COM_KNOWRES_OWNER_DEPOSIT_LBL"
			description="COM_KNOWRES_OWNER_DEPOSIT_DSC">
			<option class="btn btn-outline-primary" value="0">COM_KNOWRES_OWNER_DEPOSIT_0_LBL</option>
			<option class="btn btn-outline-primary" value="1">COM_KNOWRES_OWNER_DEPOSIT_1_LBL</option>
			<option class="btn btn-outline-primary" value="2">COM_KNOWRES_OWNER_DEPOSIT_2_LBL</option>
		</field>
		<field name="deposit_pc"
			default="0"
			filter="integer"
			type="number"
			min="1"
			max="100"
			step="1"
			label="COM_KNOWRES_OWNER_DEPOSIT_PC_LBL"
			description="COM_KNOWRES_OWNER_DEPOSIT_PC_DSC"/>
		<field name="deposit_days"
			class="input-mini"
			filter="integer"
			showon="pay_deposit:2"
			type="number"
			label="COM_KNOWRES_OWNER_DAYS_DEPOSIT_LBL"
			description="COM_KNOWRES_OWNER_DAYS_DEPOSIT_DSC"/>
		<field name="whopays"
			class="btn-group"
			default="0"
			filter="int"
			showon="payment_schedule:eom,rgp,dba,dad"
			type="radio"
			label="COM_KNOWRES_OWNER_WHOPAYS_LBL"
			description="COM_KNOWRES_OWNER_WHOPAYS_DSC">
			<option class="btn btn-outline-primary" value="0">COM_KNOWRES_OWNER_PAYMENT_MANAGER</option>
			<option class="btn btn-outline-primary" value="1">COM_KNOWRES_OWNER_PAYMENT_OWNER</option>
			<option class="btn btn-outline-primary" value="2">COM_KNOWRES_OWNER_PAYMENT_SPLIT</option>
		</field>
		<field name="iban"
			filter="string"
			showon="payment_schedule:eom,rgp,dba,dad"
			type="text"
			validate="iban"
			label="COM_KNOWRES_OWNER_IBAN_LBL"
			description="COM_KNOWRES_OWNER_IBAN_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>