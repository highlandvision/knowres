<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
		       type="text"
			filter="string"
			required="true"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_SERVICE_NAME_DSC"/>
		<field name="currency"
		       type="hidden"
			class="input-mini"
			filter="string"
			label="COM_KNOWRES_SERVICE_CURRENCY_LBL"
			description="COM_KNOWRES_SERVICE_CURRENCY_DSC"/>
		<field name="agency_id"
		       type="listforeignkey"
			key_field="id"
			required="true"
			table="#__knowres_agency"
			validate="service"
			value_field="name"
			where="state=1"
			label="COM_KNOWRES_SERVICE_AGENCY_LBL"
			description="COM_KNOWRES_SERVICE_AGENCY_DSC"/>
		<field name="property_id"
		       type="hidden"
			key_field="id"
			table="#__knowres_property"
			value_field="property_name"
			label="COM_KNOWRES_PROPERTY"
			description="COM_KNOWRES_SERVICE_PROPERTY_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
	</fieldset>
	<fieldset name="krplugin">
		<field name="plugin"
			type="text"
			   filter="string"
			   label="COM_KNOWRES_SERVICE_URL_LBL"
			   description="COM_KNOWRES_SERVICE_URL_DSC"/>
		<field name="type"
		       type="text"
			default="g"
			size="1"
			label="COM_KNOWRES_SERVICE_TYPE_LBL"
			description="COM_KNOWRES_SERVICE_TYPE_DSC">
		</field>
		<field name="parameters"
			type="text"
			label="COM_KNOWRES_SERVICES_PARAMETERS"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>