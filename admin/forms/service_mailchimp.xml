<form addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="custom">
		<field name="apikey"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_APIKEY_LBL"
			description="COM_KNOWRES_SERVICE_APIKEY_DSC"/>
		<field name="secure"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_SERVICE_SECURE_LBL"
			description="COM_KNOWRES_SERVICE_SECURE_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="list"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_LIST_LBL"
			description="COM_KNOWRES_SERVICE_LIST_DSC"/>
		<field name="firstname"
			default="FNAME"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_FIRSTNAME_LBL"
			description="COM_KNOWRES_SERVICE_FIRSTNAME_DSC"/>
		<field name="surname"
			default="LNAME"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_SURNAME_LBL"
			description="COM_KNOWRES_SERVICE_SURNAME_DSC"/>
		<field name="language"
			default="LANGUAGE"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_LANGUAGE_LBL"
			description="COM_KNOWRES_SERVICE_LANGUAGE_DSC"/>
		<field name="subscribeDate"
			default="DATESUBSCR"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_SERVICE_DATE_SUBSCRIBE_LBL"
			description="COM_KNOWRES_SERVICE_DATE_SUBSCRIBE_DSC"/>
	</fieldset>
</form>