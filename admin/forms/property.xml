<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="basic">
		<field name="property_name"
			type="text"
			required="true"
			label="COM_KNOWRES_PROPERTY_PROPERTY_NAME_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_NAME_DSC"/>
		<field name="type_id"
			class="w-auto"
			input_type="list"
			required="true"
			table="#__knowres_type"
			translation_item="type"
			type="listforeignkeytranslate"
			key_field="id"
			value_field="name"
			label="COM_KNOWRES_PROPERTY_TYPE_ID_LBL"
			description="COM_KNOWRES_PROPERTY_TYPE_ID_DSC"/>
		<field name="booking_type"
			type="radio"
			class="btn-group"
			default="0"
			required="true"
			label="COM_KNOWRES_PROPERTY_BOOKING_TYPE_LBL"
			description="COM_KNOWRES_PROPERTY_BOOKING_TYPE_DSC">
			<option value="2">COM_KNOWRES_PROPERTIES_BOOKING_TYPE_CONFIRMED</option>
			<option value="1">COM_KNOWRES_PROPERTIES_BOOKING_TYPE_PROVISIONAL</option>
			<option value="0">COM_KNOWRES_PROPERTIES_BOOKING_TYPE_REQUEST</option>
		</field>
		<field name="private"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			required="true"
			label="COM_KNOWRES_PROPERTY_PRIVATE_LBL"
			description="COM_KNOWRES_PROPERTY_PRIVATE_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="price_summary"
			filter="string"
			maxlength="50"
			type="hidden"
			label="COM_KNOWRES_PROPERTY_PRICE_SUMMARY_LBL"
			description="COM_KNOWRES_PROPERTY_PRICE_SUMMARY_DSC"/>
		<field name="owner_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_owner"
			where="state=1"
			key_field="id"
			value_field="name"
			label="COM_KNOWRES_PROPERTY_OWNER_LBL"
			description="COM_KNOWRES_PROPERTY_OWNER_DSC"/>
		<field name="property_email"
			type="text"
			filter="string"
			required="true"
			label="COM_KNOWRES_PROPERTY_PROPERTY_EMAIL_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_EMAIL_DSC"/>
		<field name="caretaker_email"
			filter="email"
			type="email"
			label="COM_KNOWRES_PROPERTY_CARETAKER_EMAIL_LBL"
			description="COM_KNOWRES_PROPERTY_CARETAKER_EMAIL_DSC"/>
	</fieldset>
	<fieldset name="capacity">
		<field name="bedrooms"
			class="input-mini"
			default="2"
			filter="integer"
			min="0"
			max="40"
			required="true"
			type="number"
			step="1"
			label="COM_KNOWRES_PROPERTY_BEDROOMS_LBL"
			description="COM_KNOWRES_PROPERTY_BEDROOMS_DSC"/>
		<field name="bathrooms"
			class="input-mini"
			default="2"
			filter="integer"
			min="0"
			max="30"
			type="number"
			step="1"
			label="COM_KNOWRES_PROPERTY_BATHROOMS_LBL"
			description="COM_KNOWRES_PROPERTY_BATHROOMS_DSC"/>
		<field name="wc"
			class="input-mini"
			default="0"
			filter="integer"
			min="0"
			max="10"
			type="number"
			step="1"
			label="COM_KNOWRES_PROPERTY_WC_LBL"
			description="COM_KNOWRES_PROPERTY_WC_DSC"/>
		<field name="sleeps"
			class="input-mini"
			default="2"
			filter="integer"
			min="1"
			max="50"
			required="true"
			step="1"
			type="number"
			label="COM_KNOWRES_PROPERTY_SLEEPS_LBL"
			description="COM_KNOWRES_PROPERTY_SLEEPS_DSC"/>
		<field name="sleeps_extra"
			class="input-mini"
			default="0"
			filter="integer"
			min="0"
			max="10"
			type="number"
			label="COM_KNOWRES_PROPERTY_SLEEPS_EXTRA_LBL"
			description="COM_KNOWRES_PROPERTY_SLEEPS_EXTRA_DSC"/>
		<field name="sleeps_infant_age"
			class="input-mini"
			default="2"
			filter="integer"
			min="0"
			max="21"
			type="number"
			label="COM_KNOWRES_PROPERTY_SLEEPS_INFANT_AGE_LBL"
			description="COM_KNOWRES_PROPERTY_SLEEPS_INFANT_AGE_DSC"/>
		<field name="sleeps_infant_max"
			class="input-mini"
			default="2"
			filter="integer"
			min="0"
			max="10"
			type="number"
			label="COM_KNOWRES_PROPERTY_SLEEPS_INFANT_MAX_LBL"
			description="COM_KNOWRES_PROPERTY_SLEEPS_INFANT_MAX_DSC"/>
		<field name="pets"
			class="input-mini"
			default="0"
			filter="integer"
			min="0"
			max="5"
			type="number"
			label="COM_KNOWRES_PROPERTY_PETS_LBL"
			description="COM_KNOWRES_PROPERTY_PETS_DSC"/>
		<field name="area"
			addonAfter="m2"
			type="text"
			append="m2"
			class="input-mini"
			label="COM_KNOWRES_PROPERTY_AREA_LBL"
			description="COM_KNOWRES_PROPERTY_AREA_DSC"/>
		<field name="floor"
			class="input-mini"
			type="integer"
			first="1"
			last="50"
			step="1"
			default="0"
			label="COM_KNOWRES_PROPERTY_FLOOR_LBL"
			description="COM_KNOWRES_PROPERTY_FLOOR_DSC">
			<option value="-1">COM_KNOWRES_PROPERTY_FLOOR_BASEMENT</option>
			<option value="0">COM_KNOWRES_PROPERTY_FLOOR_GROUND</option>
		</field>
	</fieldset>
	<fieldset name="location">
		<field name="property_aka"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_PROPERTY_AKA_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_AKA_DSC"/>
		<field name="property_street"
			type="text"
			filter="string"
			label="COM_KNOWRES_STREET"
			description="COM_KNOWRES_STREET_DSC"/>
		<field name="property_postcode"
			type="text"
			class="input-mini" filter="string"
			maxlength="20"
			label="COM_KNOWRES_POSTCODE"
			description="COM_KNOWRES_POSTCODE_DSC"/>
		<field name="country_id"
			type="combocountry"
			class="countrychain"
			allowproperty="1"
			filter="integer"
			target="jform_region_id"
			ajaxname="country_id"
			label="COM_KNOWRES_COUNTRY"
			description="COM_KNOWRES_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
			type="comboregion"
			class="regionchain"
			allowproperty="1"
			filter="integer"
			target="jform_town_id"
			ajaxname="region_id"
			label="COM_KNOWRES_REGION"
			description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
		<field name="property_region"
			type="hidden"
			label="COM_KNOWRES_PROPERTY_PROPERTY_REGION_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_REGION_DSC"/>
		<field name="town_id"
			type="combotown"
			class="townchain"
			allowproperty="1"
			filter="integer"
			label="COM_KNOWRES_TOWN"
			description="COM_KNOWRES_TOWN_DSC">
			<option value="0">COM_KNOWRES_SELECT_TOWN</option>
		</field>
		<field name="property_town"
			type="hidden"
			filter="string"
			label="COM_KNOWRES_PROPERTY_PROPERTY_TOWN_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_TOWN_DSC"/>
		<field name="property_area"
			type="text"
			label="COM_KNOWRES_PROPERTY_PROPERTY_AREA_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_AREA_DSC"/>
		<field name="property_tel"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_PROPERTY_TEL_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_TEL_DSC"/>
	</fieldset>
	<fieldset name="map">
		<field name="lat"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_LAT_LBL"
			description="COM_KNOWRES_PROPERTY_LAT_DSC"/>
		<field name="lng"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_LNG_LBL"
			description="COM_KNOWRES_PROPERTY_LNG_DSC"/>
		<field name="map_max_zoom"
			default="20"
			filter="integer"
			min="1"
			max="20"
			step="1"
			type="number"
			label="COM_KNOWRES_PROPERTY_MAP_MAX_ZOOM_LBL"
			description="COM_KNOWRES_PROPERTY_MAP_MAX_ZOOM_DSC"/>
	</fieldset>
	<fieldset name="mapactual">
		<field name="lat_actual"
			class="input-mini"
			filter="string"
			type="text"
			label="COM_KNOWRES_PROPERTY_LAT_ACTUAL_LBL"
			description="COM_KNOWRES_PROPERTY_LAT_ACTUAL_DSC"/>
		<field name="lng_actual"
			class="input-mini"
			filter="string"
			type="text"
			label="COM_KNOWRES_PROPERTY_LNG_ACTUAL_LBL"
			description="COM_KNOWRES_PROPERTY_LNG_ACTUAL_DSC"/>
	</fieldset>
	<fieldset name="amenities">
		<field name="stars"
			class="input-mini"
			type="number"
			filter="integer"
			min="0"
			max="5"
			step="1"
			default="0"
			label="COM_KNOWRES_PROPERTY_STARS_LBL"
			description="COM_KNOWRES_PROPERTY_STARS_DSC"/>
		<field name="property_features"
			input_type="list"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			required="true"
			room_type="%property%"
			table="#__knowres_property_feature"
			translation_item="propertyfeature"
			type="listforeignkeytranslate"
			where="state=1"
			label="COM_KNOWRES_PROPERTY_PROPERTY_FEATURES_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_FEATURES_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="categories"
			input_type="list"
			key_field="id"
			value_field="name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			table="#__knowres_category"
			translation_item="category"
			type="listforeignkeytranslate"
			where="state=1"
			label="COM_KNOWRES_PROPERTY_CATEGORIES_LBL"
			description="COM_KNOWRES_PROPERTY_CATEGORIES_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="property_alternatives"
			input_type="list"
			key_field="id"
			value_field="property_name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			table="#__knowres_property"
			type="listforeignkey"
			label="COM_KNOWRES_PROPERTY_PROPERTY_ALTERNATIVES_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_ALTERNATIVES_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="property_units"
			input_type="list"
			key_field="id"
			value_field="property_name"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			table="#__knowres_property"
			type="listforeignkey"
			label="COM_KNOWRES_PROPERTY_PROPERTY_UNITS_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_UNITS_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="property_mappinglink"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_PROPERTY_MAPPINGLINK_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_MAPPINGLINK_DSC"/>
	</fieldset>
	<fieldset name="roomsbeds">
		<field name="bed_types"
			filter="string"
			hiddenDescription="true"
			hiddenLabel="true"
			layout="form.field.json.bedtypes"
			type="jsonbedtypes"
			label="COM_KNOWRES_PROPERTY_BED_TYPES_LBL"
			description="COM_KNOWRES_PROPERTY_BED_TYPES_DSC"/>
	</fieldset>
	<fieldset name="roomsguests">
		<field name="rooms"
			default=""
			filter="string"
			hiddenDescription="true"
			hiddenLabel="true"
			type="jsonroomtypes"
			label="COM_KNOWRES_PROPERTY_ROOMS_LBL"
			description="COM_KNOWRES_PROPERTY_ROOMS_DSC"/>
		<field name="guest_types"
			default=""
			filter="string"
			hiddenDescription="true"
			hiddenLabel="true"
			type="jsonguesttypes"
			label="COM_KNOWRES_PROPERTY_GUEST_TYPES_LBL"
			description="COM_KNOWRES_PROPERTY_GUEST_TYPES_DSC"/>
	</fieldset>
	<fieldset name="checkinout">
		<fieldset name="security">
			<field name="security_amount"
				addonBefore=""
				class="input-mini"
				filter="string"
				type="text"
				label="COM_KNOWRES_PROPERTY_SECURITY_AMOUNT_LBL"
				description="COM_KNOWRES_PROPERTY_SECURITY_AMOUNT_DSC"/>
			<field name="security_cash"
				class="btn-group btn-group-yesno"
				default="1"
				type="radio"
				label="COM_KNOWRES_PROPERTY_SECURITY_CASH_LBL"
				description="COM_KNOWRES_PROPERTY_SECURITY_CASH_DSC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
		<fieldset name="checkintimesfees">
			<field name="checkin_time"
				class="input-mini"
				default="16:00"
				type="listtime"
				label="COM_KNOWRES_PROPERTY_CHECKIN_TIME_LBL"
				description="COM_KNOWRES_PROPERTY_CHECKIN_TIME_DSC"/>
			<field name="checkin_time_to"
				class="input-mini"
				default="18:00"
				type="listtime"
				label="COM_KNOWRES_PROPERTY_CHECKIN_TIME_TO_LBL"
				description="COM_KNOWRES_PROPERTY_CHECKIN_TIME_TO_DSC"/>
			<field name="checkin_fees"
				filter="string"
				type="jsoncheckinfees"
				label="COM_KNOWRES_PROPERTY_CHECKIN_FEES_LBL"
				description="COM_KNOWRES_PROPERTY_CHECKIN_FEES_DSC"/>
			<field name="checkout_time"
				class="input-mini"
				default="10:00"
				type="listtime"
				label="COM_KNOWRES_PROPERTY_CHECKOUT_TIME_LBL"
				description="COM_KNOWRES_PROPERTY_CHECKOUT_TIME_DSC"/>
			<field name="checkout_fees"
				filter="string"
				type="jsoncheckoutfees"
				label="COM_KNOWRES_PROPERTY_CHECKOUT_FEES_LBL"
				description="COM_KNOWRES_PROPERTY_CHECKOUT_FEES_DSC"/>
		</fieldset>
		<fieldset name="cancellation">
			<field name="cancellation_penalty"
				filter="string"
				type="jsoncancellationpenalty"
				label="COM_KNOWRES_PROPERTY_CANCELLATION_PENALTY_LBL"
				description="COM_KNOWRES_PROPERTY_CANCELLATION_PENALTY_DSC"/>
		</fieldset>
		<fieldset name="contact">
			<field name="contact_name"
				filter="string"
				type="text"
				label="COM_KNOWRES_PROPERTY_CONTACT_NAME_LBL"
				description="COM_KNOWRES_PROPERTY_CONTACT_NAME_DSC"/>
			<field name="contact_phone"
				filter="string"
				type="text"
				label="COM_KNOWRES_PROPERTY_CONTACT_PHONE_LBL"
				description="COM_KNOWRES_PROPERTY_CONTACT_PHONE_DSC"/>
			<field name="contact_email"
				filter="email"
				type="email"
				label="COM_KNOWRES_PROPERTY_CONTACT_EMAIL_LBL"
				description="COM_KNOWRES_PROPERTY_CONTACT_EMAIL_DSC"/>
			<field name="contact_days"
				class="input-mini"
				default="2"
				filter="integer"
				min="0"
				max="21"
				step="1"
				type="number"
				label="COM_KNOWRES_PROPERTY_CONTACT_DAYS_LBL"
				description="COM_KNOWRES_PROPERTY_CONTACT_DAYS_DSC"/>
		</fieldset>
	</fieldset>
	<fieldset name="propertyfields">
	</fieldset>
	<fieldset name="krmanager">
		<field name="approved"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_KNOWRES_PROPERTY_APPROVED_LBL"
			description="COM_KNOWRES_PROPERTY_APPROVED_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
	<fieldset name="upload">
		<field name="property_videolink"
			type="text"
			filter="string"
			label="COM_KNOWRES_PROPERTY_PROPERTY_VIDEOLINK_LBL"
			description="COM_KNOWRES_PROPERTY_PROPERTY_VIDEOLINK_DSC"/>
		<field name="uploadpdf"
			type="file"
			label="COM_KNOWRES_PROPERTY_PDF_LBL"
			description="COM_KNOWRES_PROPERTY_PDF_DSC"
			size="60"
			accept=".pdf"/>
	</fieldset>
	<fieldset name="hidden">
		<field name="apikey"
			type="hidden"
			label="COM_KNOWRES_PROPERTY_APIKEY_LBL"
			description="COM_KNOWRES_PROPERTY_APIKEY_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>