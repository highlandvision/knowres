<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="service_id"
			type="listforeignkey"
			input_type="list"
			required="true"
			table="#__knowres_service"
			key_field="id"
			value_field="name"
			where="(type='e' OR `type` = 'c' OR `plugin` = 'beyond') AND agency_id > 0"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_SERVICE_ID_LBL"
			description="COM_KNOWRES_SERVICEXREF_SERVICE_ID_DSC"/>
		<field name="property_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_property"
			key_field="id"
			value_field="property_name"
			where="state IN(0,1) and approved=1"
			validate="servicexrefproperty"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_PROPERTY_ID_LBL"
			description="COM_KNOWRES_SERVICEXREF_PROPERTY_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="contract_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_contract"
			key_field="id"
			value_field="tag"
			today="departure"
			where="state IN(0,1) and black_booking=0"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_CONTRACT_ID_LBL"
			description="COM_KNOWRES_SERVICEXREF_CONTRACT_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="guest_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_guest"
			key_field="id"
			value_field="surname"
			where="state IN(0,1)"
			filter="integer"
			label="COM_KNOWRES_GUEST"
			description="COM_KNOWRES_SERVICEXREF_GUEST_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="owner_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_owner"
			key_field="id"
			value_field="name"
			where="state IN(0,1)"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_OWNER_ID_LBL"
			description="COM_KNOWRES_SERVICEXREF_OWNER_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="payment_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_contract_payment"
			key_field="id"
			value_field="payment_ref"
			where="state IN(0,1)"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_PAYMENT_ID_LBL"
			description="COM_KNOWRES_SERVICEXREF_PAYMENT_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="foreign_key"
			class="input-mini"
			filter="string"
			required="true"
			type="text"
			validate="servicexref"
			label="COM_KNOWRES_SERVICEXREF_FOREIGN_KEY_LBL"
			description="COM_KNOWRES_SERVICEXREF_FOREIGN_KEY_DSC"/>
		<field name="sell"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_SERVICEXREF_SELL_LBL"
			description="COM_KNOWRES_SERVICEXREF_SELL_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krhidden">
		<field name="cancelled"
			type="hidden"
			size="1"
			default="0"
			filter="integer"
			label="COM_KNOWRES_SERVICEXREF_CANCELLED_LBL"
			description="COM_KNOWRES_SERVICEXREF_CANCELLED_DSC"/>
		<field name="new"
			type="hidden"
			default="0"
			filter="integer"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>