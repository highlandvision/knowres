<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_TAX_NAME_LBL"
			description="COM_KNOWRES_TAX_NAME_DSC"/>
		<field name="country_id"
			type="combocountry"
			class="countrychain"
			onchange="comboGeo(this.value, 'tax.combo', 'region');"
			required="true"
			allowproperty="1"
			filter="integer"
			target="jform_region_id"
			ajaxname="country_id"
			label="COM_KNOWRES_MAPMARKER_COUNTRY_ID_LBL"
			description="COM_KNOWRES_MAPMARKER_COUNTRY_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
			type="comboregion"
			class="regionchain"
			onchange="comboGeo(this.value, 'tax.combo', 'town');"
			allowproperty="1"
			filter="integer"
			target="jform_town_id"
			ajaxname="region_id"
			label="COM_KNOWRES_REGION"
			description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
		<field name="town_id"
			type="combotown"
			class="townchain"
			allowproperty="1"
			filter="integer"
			ajaxname="town_id"
			label="COM_KNOWRES_TOWN"
			description="COM_KNOWRES_TOWN_DSC">
			<option value="0">COM_KNOWRES_SELECT_TOWN</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>
