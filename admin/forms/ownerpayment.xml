<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="contract_id"
			type="hidden"/>
		<field name="amount"
			class="input-mini"
			default="0"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_OWNERPAYMENT_AMOUNT_LBL"
			description="COM_KNOWRES_OWNERPAYMENT_AMOUNT_DSC"/>
		<field name="payment_date"
			class="input-mini"
			datepicker='{"minDate": "-2Y", "maxDate": "+1D", "altField": "#jform_payment_date"}'
			filter="string"
			required="true"
			type="uicalendar"
			label="COM_KNOWRES_OWNERPAYMENT_PAYMENT_DATE_LBL"
			description="COM_KNOWRES_OWNERPAYMENT_PAYMENT_DATE_DSC"/>
		<field name="payment_ref"
			filter="string"
			type="text"
			label="COM_KNOWRES_OWNERPAYMENT_PAYMENT_REF_LBL"
			description="COM_KNOWRES_OWNERPAYMENT_PAYMENT_REF_DSC"/>
		<field name="note"
			cols="100"
			filter="string"
			rows="4"
			type="textarea"
			label="COM_KNOWRES_CONTRACTNOTE_NOTE_LBL"
			description="COM_KNOWRES_CONTRACTNOTE_NOTE_DSC"/>
		<field name="confirmed"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_OWNERPAYMENT_CONFIRMED_LBL"
			description="COM_KNOWRES_OWNERPAYMENT_CONFIRMED_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="type"
			type="hidden"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
	</fieldset>
</form>