<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="user_id"
			type="user"
			groups="6,3,9,8,10,7"
			label="COM_KNOWRES_MANAGER_USER_ID_LBL"
			description="COM_KNOWRES_MANAGER_USER_ID_DSC"/>
		<field name="agency_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_agency"
			key_field="id"
			value_field="name"
			required="true"
			label="COM_KNOWRES_MANAGER_AGENCY_ID_LBL"
			description="COM_KNOWRES_MANAGER_AGENCY_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT_REQUIRED</option>
		</field>
		<field name="access_level"
			type="list"
			default=""
			required="true"
			filter="string"
			label="COM_KNOWRES_MANAGER_ACCESS_LEVEL_LBL"
			description="COM_KNOWRES_MANAGER_ACCESS_LEVEL_DSC">
			<option value="">COM_KNOWRES_SELECT_REQUIRED</option>
			<option value="10">COM_KNOWRES_MANAGER_OWNER</option>
			<option value="20">COM_KNOWRES_MANAGER_PROPERTY_MANAGER</option>
			<option value="30">COM_KNOWRES_MANAGER_SUPER_PROPERTY_MANAGER</option>
			<option value="40">COM_KNOWRES_MANAGER_SUPER_PROPERTY_MANAGER_ADMIN</option>
		</field>
		<field name="properties"
			default=""
			type="listforeignkey"
			layout="joomla.form.field.list-fancy-select"
			table="#__knowres_property"
			key_field="id"
			value_field="property_name"
			multiple="true"
			showon="access_level:10[OR]access_level:20"
			validate="managerproperties"
			label="COM_KNOWRES_MANAGER_PROPERTIES_LBL"
			description="COM_KNOWRES_MANAGER_PROPERTIES_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="apikey"
			type="text"
			readonly="true"
			label="COM_KNOWRES_MANAGER_APIKEY_LBL"
			description="COM_KNOWRES_MANAGER_APIKEY_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>