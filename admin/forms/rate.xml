<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="false"
			filter="string"
			maxlength="255"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_RATE_NAME_DSC"/>
		<field name="valid_from"
			class="input-mini"
			datepicker='{"minDate": "0", "maxDate": "+48M", "altField": "#jform_valid_from"}'
			required="true"
			type="uicalendar"
			label="COM_KNOWRES_RATE_VALID_FROM_LBL"
			description="COM_KNOWRES_RATE_VALID_FROM_DSC"/>
		<field name="valid_to"
			class="input-mini"
			datepicker='{"minDate": "+1D", "maxDate": "+48M", "altField": "#jform_valid_to"}'
			required="true"
			type="uicalendar"
			validate="daterangerates"
			label="COM_KNOWRES_RATE_VALID_TO_LBL"
			description="COM_KNOWRES_RATE_VALID_TO_DSC"/>
		<field name="start_day"
			class="input-mini"
			default="7"
			type="list"
			validate="startdayrates"
			label="COM_KNOWRES_RATE_START_DAY_LBL"
			description="COM_KNOWRES_RATE_START_DAY_DSC">
			<option value="7">COM_KNOWRES_ANYDAY</option>
			<option value="1">COM_KNOWRES_MONDAY</option>
			<option value="2">COM_KNOWRES_TUESDAY</option>
			<option value="3">COM_KNOWRES_WEDNESDAY</option>
			<option value="4">COM_KNOWRES_THURSDAY</option>
			<option value="5">COM_KNOWRES_FRIDAY</option>
			<option value="6">COM_KNOWRES_SATURDAY</option>
			<option value="0">COM_KNOWRES_SUNDAY</option>
		</field>
		<field name="min_nights"
			type="text"
			required="true"
			default="1"
			class="input-mini"
			label="COM_KNOWRES_RATE_MIN_NIGHTS_LBL"
			description="COM_KNOWRES_RATE_MIN_NIGHTS_DSC"
			filter="integer"/>
		<field name="max_nights"
			type="text"
			default="28"
			required="true"
			class="input-mini"
			label="COM_KNOWRES_RATE_MAX_NIGHTS_LBL"
			description="COM_KNOWRES_RATE_MAX_NIGHTS_DSC"
			filter="integer"/>
	</fieldset>
	<fieldset name="krcustom">
		<field name="min_guests"
			default="1"
			filter="integer"
			readonly="true"
			required="true"
			type="number"
			min="1"
			max="99"
			step="1"
			label="COM_KNOWRES_RATE_MIN_GUESTS_LBL"
			description="COM_KNOWRES_RATE_MIN_GUESTS_DSC"/>
		<field name="max_guests"
			default="1"
			filter="integer"
			required="true"
			type="number"
			min="1"
			max="99"
			step="1"
			label="COM_KNOWRES_RATE_MAX_GUESTS_LBL"
			description="COM_KNOWRES_RATE_MAX_GUESTS_DSC"/>
		<field name="rate"
			class="input-mini"
			default="0"
			filter="string"
			required="true"
			type="text"
			label="COM_KNOWRES_RATE_RATE_LBL"
			description="COM_KNOWRES_RATE_RATE_DSC"/>
		<field name="ignore_pppn"
			class="btn-group btn-group-yesno"
			default="1"
			required="true"
			type="radio"
			label="COM_KNOWRES_RATE_IGNORE_PPPN_LBL"
			description="COM_KNOWRES_RATE_IGNORE_PPPN_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krfield">
		<field name="more_guests"
			filter="string"
			type="jsonmoreguests"
			validate="moreguests"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
	<fieldset name="krspecial">
		<field name="property_id"
			type="text"
			filter="integer"/>
	</fieldset>
</form>