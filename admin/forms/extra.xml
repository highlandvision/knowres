<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_EXTRA_NAME_DSC"
			filter="string"/>
		<field name="description"
			filter="string"
			type="text"
			label="COM_KNOWRES_EXTRA_DESCRIPTION_LBL"
			description="COM_KNOWRES_EXTRA_DESCRIPTION_DSC"/>
		<field name="mandatory"
			type="radio"
			default="0"
			required="true"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_EXTRA_MANDATORY_LBL"
			description="COM_KNOWRES_EXTRA_MANDATORY_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="cleaning"
			class="btn-group btn-group-yesno"
			default="0"
			filter="string"
			required="true"
			type="radio"
			label="COM_KNOWRES_EXTRA_CLEANING_LBL"
			description="COM_KNOWRES_EXTRA_CLEANING_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="max_quantity"
			type="integer"
			class="input-mini"
			required="true"
			default="1"
			first="1"
			last="20"
			step="1"
			label="COM_KNOWRES_EXTRA_MAX_QUANTITY_LBL"
			description="COM_KNOWRES_EXTRA_MAX_QUANTITY_DSC"/>
		<field name="model"
			type="radio"
			default="3"
			required="true"
			label="COM_KNOWRES_EXTRA_MODEL_LBL"
			description="COM_KNOWRES_EXTRA_MODEL_DSC"
			filter="string">
			<option value="3">COM_KNOWRES_EXTRA_MODEL_PERBOOKING</option>
			<option value="2">COM_KNOWRES_EXTRA_MODEL_PERDAY</option>
			<option value="1">COM_KNOWRES_EXTRA_MODEL_PERWEEK</option>
			<option value="4">COM_KNOWRES_EXTRA_MODEL_PERPERSONPERBOOKING</option>
			<option value="5">COM_KNOWRES_EXTRA_MODEL_PERPERSONPERDAY</option>
			<option value="11">COM_KNOWRES_EXTRA_MODEL_PERBOOKINGPC</option>
			<option value="12">COM_KNOWRES_EXTRA_MODEL_PERDAYPC</option>
		</field>
		<field name="price"
			type="text"
			class="input-mini"
			label="COM_KNOWRES_EXTRA_PRICE_LBL"
			description="COM_KNOWRES_EXTRA_PRICE_DSC"
			default="0"
			filter="string"/>
		<field name="percentage"
			type="text"
			append="%"
			class="input-mini"
			default="0"
			filter="integer"
			label="COM_KNOWRES_EXTRA_PERCENTAGE_LBL"
			description="COM_KNOWRES_EXTRA_PERCENTAGE_DSC"/>
		<field name="payto"
			class="btn-group"
			default="0"
			filter="integer"
			required="true"
			type="radio"
			label="COM_KNOWRES_EXTRA_PAYTO_LBL"
			description="COM_KNOWRES_EXTRA_PAYTO_DSC">
			<option value="0">COM_KNOWRES_SELECT_OWNERPAYMENTS_MANAGER</option>
			<option value="1">COM_KNOWRES_SELECT_OWNERPAYMENTS_OWNER</option>
			<option value="2">COM_KNOWRES_SELECT_OWNERPAYMENTS_SPLIT</option>
		</field>
	</fieldset>
	<fieldset name="krtax">
		<field name="tax_id"
			class="w-auto"
			input_type="list"
			key_field="id"
			table="#__knowres_tax_rate"
			type="listforeignkey"
			value_field="code"
			label="COM_KNOWRES_EXTRA_TAX_ID_LBL"
			description="COM_KNOWRES_EXTRA_TAX_ID_DSC">
			<option value="0">JNONE</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
	<fieldset name="krspecial">
		<field name="property_id"
			type="text"
			filter="integer"/>
	</fieldset>
</form>