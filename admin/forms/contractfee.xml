<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="description"
			required="true"
			filter="string"
			size="10"
			type="text"
			validate="nowhitespace"
			label="COM_KNOWRES_CONTRACTFEE_DESCRIPTION_LBL"
			description="COM_KNOWRES_CONTRACTFEE_DESCRIPTION_DSC"/>
		<field name="value"
			class="input-mini"
			default="0"
			filter="string"
			required="true"
			type="textmoney"
			validate="nozero"
			label="COM_KNOWRES_CONTRACTFEE_VALUE_LBL"
			description="COM_KNOWRES_CONTRACTFEE_VALUE_DSC"/>
		<field name="contract_id"
			filter="integer"
			type="hidden"/>
		<field name="contract_payment_id"
			default="0"
			filter="integer"
			type="hidden"/>
		<field name="actioned"
			default="0"
			filter="integer"
			type="hidden"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>