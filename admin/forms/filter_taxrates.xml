<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_KNOWRES_SEARCH"
			description="COM_KNOWRES_DEFAULT_SEARCH"
			hint="COM_KNOWRES_SEARCH"/>
		<field
			name="state"
			type="status"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="listorderingkr"
			statuses="*,0,1,2,-2"
			onchange="this.form.submit();"
			default="name ASC"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="name ASC">COM_KNOWRES_NAME COM_KNOWRES_ASCENDING</option>
			<option value="name DESC">COM_KNOWRES_NAME COM_KNOWRES_DESCENDING</option>
			<option value="tax_name ASC">COM_KNOWRES_TAXRATES_TAX_ID COM_KNOWRES_ASCENDING</option>
			<option value="tax_name DESC">COM_KNOWRES_TAXRATES_TAX_ID COM_KNOWRES_DESCENDING</option>
			<option value="a.code ASC">COM_KNOWRES_TAXRATES_CODE COM_KNOWRES_ASCENDING</option>
			<option value="a.code DESC">COM_KNOWRES_TAXRATES_CODE COM_KNOWRES_DESCENDING</option>
			<option value="a.rate ASC">COM_KNOWRES_TAXRATES_RATE COM_KNOWRES_ASCENDING</option>
			<option value="a.rate DESC">COM_KNOWRES_TAXRATES_RATE COM_KNOWRES_DESCENDING</option>
			<option value="a.per_night ASC">COM_KNOWRES_TAXRATES_PER_NIGHT COM_KNOWRES_ASCENDING</option>
			<option value="a.per_night DESC">COM_KNOWRES_TAXRATES_PER_NIGHT COM_KNOWRES_DESCENDING</option>
			<option value="a.valid_from ASC">COM_KNOWRES_TAXRATES_VALID_FROM COM_KNOWRES_ASCENDING</option>
			<option value="a.valid_from DESC">COM_KNOWRES_TAXRATES_VALID_FROM COM_KNOWRES_DESCENDING</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
			label="COM_KNOWRES_LIST_LIMIT"
			description="COM_KNOWRES_LIST_LIMIT_DSC"/>
	</fields>
</form>