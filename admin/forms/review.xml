<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field">
	<fieldset name="krdata">
		<field name="contract_id"
			type="listforeignkey"
			input_type="list"
			table="#__knowres_contract"
			key_field="id"
			value_field="tag"
			where="black_booking = 0 AND cancelled = 0 AND reviewed=0"
			label="COM_KNOWRES_CONTRACT_TITLE"/>
		<field name="review_date"
			class="input-mini"
			datepicker='{"minDate": "-10Y", "maxDate": "+1D", "altField": "#jform_review_date"}'
			filter="string"
			required="true"
			type="uicalendar"
			label="COM_KNOWRES_REVIEW_REVIEW_DATE_LBL"
			description="COM_KNOWRES_REVIEW_REVIEW_DATE_DSC"/>
		<field name="title"
			type="text"
			filter="string"
			label="COM_KNOWRES_REVIEW_TITLE_LBL"
			description="COM_KNOWRES_REVIEW_TITLE_DSC"/>
		<field name="review"
			type="textarea"
			cols="50"
			rows="8"
			filter="string"
			label="COM_KNOWRES_REVIEW_REVIEW_LBL"
			description="COM_KNOWRES_REVIEW_REVIEW_DSC"/>
	</fieldset>
	<fieldset name="kr-approval">
		<field name="guest_name"
			type="text"
			label="COM_KNOWRES_REVIEW_GUEST_NAME_LBL"
			description="COM_KNOWRES_REVIEW_GUEST_NAME_DSC"
			filter="string"/>
		<field name="guest_location"
			type="text"
			label="COM_KNOWRES_REVIEW_GUEST_LOCATION_LBL"
			description="COM_KNOWRES_REVIEW_GUEST_LOCATION_DSC"
			filter="string"/>
		<field name="rating"
			class="input-mini"
			default="0.00"
			filter="float"
			readonly="true"
			type="text"
			label="COM_KNOWRES_REVIEW_RATING_LBL"
			description="COM_KNOWRES_REVIEW_RATING_DSC"/>
		<field name="held"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_REVIEW_HELD_LBL"
			description="COM_KNOWRES_REVIEW_HELD_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="approved"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_REVIEW_APPROVED_LBL"
			description="COM_KNOWRES_REVIEW_APPROVED_DSC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fieldset>
	<fieldset name="kr-ratings">
		<field name="rating1"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING1"/>
		<field name="rating2"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING2"/>
		<field name="rating3"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING3"/>
		<field name="rating4"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING4"/>
		<field name="rating5"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING5"/>
		<field name="rating6"
			type="integer"
			class="input-mini"
			default="10"
			first="1"
			last="10"
			step="1"
			label="COM_KNOWRES_CONFIG_REVIEWS_RATING6"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
	<fieldset name="krspecial">
		<field name="property_id"
			type="text"
			filter="integer"/>
	</fieldset>
</form>