<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			class="w-auto"
			required="true"
			type="text"
			label="COM_KNOWRES_AGENT_NAME_LBL"
			description="COM_KNOWRES_AGENT_NAME_DSC"/>
		<field name="service_id"
			class="w-auto"
			input_type="list"
			key_field="id"
			value_field="name"
			table="#__knowres_service"
			type="listforeignkey"
			where="agency_id>0 AND state=1 AND type='c'"
			label="COM_KNOWRES_AGENT_SERVICE_ID_LBL"
			description="COM_KNOWRES_AGENT_SERVICE_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="foreign_key"
			class="w-auto"
			default="0"
			showon="service_id!:0"
			type="listruagent"
			label="COM_KNOWRES_AGENT_FOREIGN_KEY_LBL"
			description="COM_KNOWRES_AGENT_FOREIGN_KEY_DSC">
			<option value="offline">Offline Bookings</option>
		</field>
		<field name="foreign_key_reqd"
			class="btn-group btn-group-yesno"
			default="0"
			showon="service_id:0"
			type="radio"
			label="COM_KNOWRES_AGENT_FOREIGN_KEY_REQD_LBL"
			description="COM_KNOWRES_AGENT_FOREIGN_KEY_REQD_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krdata-extras">
		<field name="mandatory_extras_charge"
			type="radio"
			default="0"
			class="btn-group btn-group-yesno"
			label="COM_KNOWRES_AGENT_MANDATORY_EXTRAS_CHARGE_LBL"
			description="COM_KNOWRES_AGENT_MANDATORY_EXTRAS_CHARGE_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="mandatory_extras_excluded"
			class="btn-group btn-group-yesno"
			default="0"
			showon="mandatory_extras_charge:1"
			type="radio"
			label="COM_KNOWRES_AGENT_MANDATORY_EXTRAS_EXCLUDED_LBL"
			description="COM_KNOWRES_AGENT_MANDATORY_EXTRAS_EXCLUDED_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="krdata-reservation">
		<field name="deposit_paid"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_AGENT_DEPOSIT_PAID_LBL"
			description="COM_KNOWRES_AGENT_DEPOSIT_PAID_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="commission"
			addonAfter="%"
			class="input-mini"
			default="15"
			filter="string"
			type="text"
			label="COM_KNOWRES_AGENT_COMMISSION_LBL"
			description="COM_KNOWRES_AGENT_COMMISSION_DSC"/>
		<field name="deposit"
			addonAfter="%"
			class="input-mini"
			default="30"
			filter="string"
			type="text"
			label="COM_KNOWRES_AGENT_DEPOSIT_LBL"
			description="COM_KNOWRES_AGENT_DEPOSIT_DSC"/>
		<field name="deposit_unconfirmed"
			addonAfter="%"
			class="input-mini"
			default="30"
			filter="string"
			showon="deposit_paid:1"
			type="text"
			label="COM_KNOWRES_AGENT_DEPOSIT_UNCONFIRMED_LBL"
			description="COM_KNOWRES_AGENT_DEPOSIT_UNCONFIRMED_DSC"/>
		<field name="deposit_unconfirmed_agent"
			default="0"
			class="btn-group btn-group-yesno"
			showon="deposit_paid:0"
			type="radio"
			label="COM_KNOWRES_AGENT_DEPOSIT_UNCONFIRMED_AGENT_LBL"
			description="COM_KNOWRES_AGENT_DEPOSIT_UNCONFIRMED_AGENT_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="owner_deposit_payment"
			class="btn-group btn-group-yesno"
			default="0"
			type="radio"
			label="COM_KNOWRES_AGENT_OWNER_DEPOSIT_PAYMENT_LBL"
			description="COM_KNOWRES_AGENT_OWNER_DEPOSIT_PAYMENT_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="expiry_days"
			class="input-mini"
			filter="string"
			type="text"
			label="COM_KNOWRES_AGENT_EXPIRY_DAYS_LBL"
			description="COM_KNOWRES_AGENT_EXPIRY_DAYS_DSC"/>
		<field name="balance_days"
			class="input-mini"
			default="30"
			filter="string"
			type="text"
			label="COM_KNOWRES_AGENT_BALANCE_DAYS_LBL"
			description="COM_KNOWRES_AGENT_BALANCE_DAYS_DSC"/>
	</fieldset>
	<fieldset name="krdata-emailtext">
		<field name="provisional_email_text"
			type="textarea"
			filter="string"
			label="COM_KNOWRES_AGENT_PROVISIONAL_EMAIL_TEXT_LBL"
			description="COM_KNOWRES_AGENT_PROVISIONAL_EMAIL_TEXT_DSC"/>
		<field name="confirmed_email_text"
			type="textarea"
			filter="string"
			label="COM_KNOWRES_AGENT_CONFIRMED_EMAIL_TEXT_LBL"
			description="COM_KNOWRES_AGENT_CONFIRMED_EMAIL_TEXT_DSC"/>
		<field name="invoice_text"
			type="textarea"
			filter="string"
			label="COM_KNOWRES_AGENT_INVOICE_TEXT_LBL"
			description="COM_KNOWRES_AGENT_INVOICE_TEXT_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>