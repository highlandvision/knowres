<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="success"
			default="1"
			type="integer"
			label="COM_KNOWRES_SERVICELOG_SUCCESS_LBL"/>
		<field name="service_id"
			input_type="list"
			table="#__knowres_service"
			key_field="id"
			value_field="name"
			where="state = 1"
			type="listforeignkey"
			label="COM_KNOWRES_SERVICELOG_SERVICE_ID_LBL"/>
		<field name="queue_id"
			input_type="list"
			table="#__knowres_service_queue"
			key_field="id"
			value_field="name"
			type="listforeignkey"
			label="COM_KNOWRES_SERVICELOG_QUEUE_ID_LBL"
			description="COM_KNOWRES_SERVICELOG_QUEUE_ID_DSC"/>
		<field name="contract_id"
			input_type="list"
			table="#__knowres_contract"
			key_field="id"
			value_field="tag"
			type="listforeignkey"
			label="COM_KNOWRES_SERVICELOG_CONTRACT_ID_LBL"/>
		<field name="property_id"
			input_type="list"
			table="#__knowres_property"
			key_field="id"
			value_field="property_name"
			type="listforeignkey"
			label="COM_KNOWRES_SERVICELOG_PROPERTY_ID_LBL"/>
		<field name="foreign_key"
			filter="string"
			type="text"
			label="COM_KNOWRES_SERVICELOG_FOREIGN_KEY_LBL"/>
		<field name="method"
			filter="string"
			readonly="true"
			label="COM_KNOWRES_SERVICELOG_METHOD_LBL"/>
		<field name="errors"
			class="readonly"
			filter="string"
			type="textapi"
			label="COM_KNOWRES_SERVICELOG_ERRORS_LBL"/>
		<field name="request"
			filter="string"
			type="textapi"
			label="COM_KNOWRES_SERVICELOG_REQUEST_LBL"/>
		<field name="response"
			filter="string"
			type="textapi"
			label="COM_KNOWRES_SERVICELOG_RESPONSE_LBL"/>
		<field name="subject"
			filter="string"
			label="COM_KNOWRES_SERVICELOG_SUBJECT_LBL"/>
		<field name="reply_to"
			filter="string"
			label="COM_KNOWRES_SERVICELOG_REPLY_TO_LBL"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
	</fieldset>
</form>