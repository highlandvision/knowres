<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
      addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="guestname">
		<field name="firstname"
		       type="text"
		       filter="string"
		       class="px-2 pb-1"
		       required="true"
		       label="COM_KNOWRES_FIRSTNAME"
		       description="COM_KNOWRES_FIRSTNAME_DSC"/>
		<field name="surname"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       required="true"
		       label="COM_KNOWRES_SURNAME"
		       description="COM_KNOWRES_SURNAME_DSC"/>
	</fieldset>
	<fieldset name="document">
		<field name="document_type"
		       type="listdocumenttype"
		       class="px-2 pb-1"
		       filter="integer"
		       label="COM_KNOWRES_DOCUMENT_TYPE_LBL"
		       description="COM_KNOWRES_DOCUMENT_TYPE_DSC">
		</field>
		<field name="document_id"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_DOCUMENT_ID_LBL"
		       description="COM_KNOWRES_DOCUMENT_ID_DSC"/>
	</fieldset>
	<fieldset name="contact">
		<field name="email"
		       type="email"
		       class="px-2 pb-1"
		       filter="email"
		       required="true"
		       validate="email"
		       label="COM_KNOWRES_GUEST_EMAIL_LBL"
		       description="COM_KNOWRES_GUEST_EMAIL_DSC"/>
		<field name="email_2"
		       type="email"
		       class="px-2 pb-1"
		       filter="email"
		       validate="email"
		       label="COM_KNOWRES_GUEST_EMAIL_2_LBL"
		       description="COM_KNOWRES_GUEST_EMAIL_2_DSC"/>
		<field name="email_3"
		       type="email"
		       class="px-2 pb-1"
		       filter="email"
		       validate="email"
		       label="COM_KNOWRES_GUEST_EMAIL_3_LBL"
		       description="COM_KNOWRES_GUEST_EMAIL_2_DSC"/>
		<field name="mobile_country_id"
		       type="listdialcode"
		       class="px-2 pb-1"
		       filter="integer"
		       label="COM_KNOWRES_GUEST_MOBILE_COUNTRY_LBL"
		       description="COM_KNOWRES_GUEST_MOBILE_COUNTRY_DSC"/>
		<field name="mobile"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_GUEST_MOBILE_LBL"
		       description="COM_KNOWRES_GUEST_MOBILE_DSC"/>
		<field name="telephone"
		       type="jsontelephone"
		       class="px-2 pb-1"
		       filter="string"
		       layout="form.field.json.generic"
		       label="COM_KNOWRES_GUEST_ALTERNATIVE_TELEPHONE_LBL"
		       description="COM_KNOWRES_GUEST_ALTERNATIVE_TELEPHONE_DSC"/>
	</fieldset>
	<fieldset name="address">
		<field name="address1"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_ADDRESS1"
		       description="COM_KNOWRES_ADDRESS1_DSC"/>
		<field name="address2"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_ADDRESS2"
		       description="COM_KNOWRES_ADDRESS2_DSC"/>
		<field name="town"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_TOWN"
		       description="COM_KNOWRES_TOWN"/>
		<field name="postcode"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_POSTCODE"
		       description="COM_KNOWRES_POSTCODE"/>
		<field name="country_id"
		       type="combocountry"
		       class="countrychain px-2 pb-1"
		       filter="integer"
		       onchange="comboGeo(this.value, 'guest.combo', 'region');"
		       label="COM_KNOWRES_COUNTRY"
		       description="COM_KNOWRES_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
		       type="comboregion"
		       class="regionchain px-2 px-1"
		       filter="integer"
		       label="COM_KNOWRES_REGION"
		       description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
	</fieldset>
	<fieldset name="billingaddress">
		<field name="billing"
		       type="radio"
		       class="btn-group btn-group-yesno px-2 pb-1"
		       default="0"
		       label="COM_KNOWRES_BILLING_ADDRESS_CHECK">
			<option value="0"
			        onclick="fillBilling(0);">JNO
			</option>
			<option value="1"
			        onclick="fillBilling(1);">JYES
			</option>
		</field>
		<field name="b_address1"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_ADDRESS1"
		       description="COM_KNOWRES_ADDRESS1_DSC"/>
		<field name="b_address2"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_ADDRESS2"
		       description="COM_KNOWRES_ADDRESS2_DSC"/>
		<field name="b_town"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_TOWN"
		       description="COM_KNOWRES_TOWN_DSC"/>
		<field name="b_postcode"
		       type="text"
		       class="px-2 pb-1"
		       filter="string"
		       label="COM_KNOWRES_POSTCODE"
		       description="COM_KNOWRES_POSTCODE_DSC"/>
		<field name="b_country_id"
		       type="combocountry"
		       class="bcountrychain px-2 pb-1"
		       filter="integer"
		       onchange="comboGeo(this.value, 'guest.combo', 'b_region');"
		       label="COM_KNOWRES_COUNTRY"
		       description="COM_KNOWRES_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="b_region_id"
		       type="comboregion"
		       class="b_regionchain px-2 pb-1"
		       filter="integer"
		       label="COM_KNOWRES_REGION"
		       description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
	</fieldset>
	<fieldset name="hidden">
		<field name="user_id"
		       type="hidden"
		       default="0"
		       filter="integer"/>
		<field name="customer_ref"
		       type="hidden"
		       filter="string"/>
		<field name="foreign_key"
		       type="hidden"
		       filter="string"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
		       type="list"
		       class="chzn-color-state"
		       size="1"
		       default="1"
		       validate="guest"
		       label="JSTATUS"
		       description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="id"
		       type="text"
		       default="0"
		       readonly="true"
		       class="readonly"
		       label="COM_KNOWRES_ID"
		       description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
		       type="calendar"
		       format="%Y-%m-%d %H:%M:%S"
		       filter="user_utc"
		       readonly="true"
		       label="COM_KNOWRES_CREATED_AT_LBL"
		       description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
		       type="user"
		       readonly="true"
		       label="COM_KNOWRES_CREATED_BY_LBL"
		       description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
		       type="calendar"
		       format="%Y-%m-%d %H:%M:%S"
		       filter="user_utc"
		       readonly="true"
		       label="COM_KNOWRES_UPDATED_AT_LBL"
		       description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
		       type="user"
		       readonly="true"
		       label="COM_KNOWRES_UPDATED_BY_LBL"
		       description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
		       type="hidden"
		       filter="unset"/>
		<field name="checked_out_time"
		       type="hidden"
		       filter="unset"/>
	</fieldset>
</form>