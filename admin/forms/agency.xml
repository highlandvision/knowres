<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_AGENCY_NAME_LBL"
			description="COM_KNOWRES_AGENCY_NAME_DSC"/>
		<field name="telephone"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_AGENCY_TELEPHONE_LBL"
			description="COM_KNOWRES_AGENCY_TELEPHONE_DSC"/>
		<field name="tax_code"
			type="text"
			filter="string"
			label="COM_KNOWRES_AGENCY_TAX_CODE_LBL"
			description="COM_KNOWRES_AGENCY_TAX_CODE_DSC"/>
		<field name="company_number"
			type="text"
			filter="string"
			label="COM_KNOWRES_AGENCY_COMPANY_NUMBER_LBL"
			description="COM_KNOWRES_AGENCY_COMPANY_NUMBER_DSC"/>
		<field name="street"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_STREET"
			description="COM_KNOWRES_STREET_DSC"/>
		<field name="town"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_TOWN"
			description="COM_KNOWRES_TOWN_DSC"/>
		<field name="postcode"
			type="text"
			class="input-mini"
			filter="string"
			required="true"
			label="COM_KNOWRES_POSTCODE"
			description="COM_KNOWRES_POSTCODE_DSC"/>
		<field name="country_id"
			class="countrychain"
			filter="integer"
			layout="joomla.form.field.list-fancy-select"
			onchange="comboGeo(this.value, 'agency.combo', 'region');"
			required="true"
			type="combocountry"
			label="COM_KNOWRES_COUNTRY"
			description="COM_KNOWRES_COUNTRY_DSC">
			<option value="0">COM_KNOWRES_SELECT_COUNTRY</option>
		</field>
		<field name="region_id"
			class="regionchain"
			filter="integer"
			layout="joomla.form.field.list-fancy-select"
			required="true"
			type="comboregion"
			label="COM_KNOWRES_REGION"
			description="COM_KNOWRES_REGION_DSC">
			<option value="0">COM_KNOWRES_SELECT_REGION</option>
		</field>
	</fieldset>
	<fieldset name="krblurb">
		<field name="gdpr_statement"
			type="textarea"
			cols="100"
			rows="6"
			filter="safehtml"
			label="COM_KNOWRES_AGENCY_GDPR_LBL"
			description="COM_KNOWRES_AGENCY_GDPR_DSC"/>
		<field name="cancellation_terms"
			type="textarea"
			cols="100"
			rows="6"
			filter="safehtml"
			label="COM_KNOWRES_AGENCY_CANCELLATION_TERMS_LBL"
			description="COM_KNOWRES_AGENCY_CANCELLATION_TERMS_DSC"/>
		<field name="insurance_disclaimer"
			type="textarea"
			cols="100"
			rows="6"
			filter="safehtml"
			label="COM_KNOWRES_AGENCY_INSURANCE_DISCLAIMER_LBL"
			description="COM_KNOWRES_AGENCY_INSURANCE_DISCLAIMER_DSC"/>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>