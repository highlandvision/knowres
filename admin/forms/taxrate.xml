<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="HighlandVision\Component\Knowres\Administrator\Field"
	addruleprefix="HighlandVision\Component\Knowres\Administrator\Rule">
	<fieldset name="krdata">
		<field name="name"
			type="text"
			required="true"
			filter="string"
			label="COM_KNOWRES_NAME"
			description="COM_KNOWRES_TAXRATE_NAME_DSC"/>
		<field name="tax_id"
			class="w-auto"
			input_type="list"
			key_field="id"
			required="true"
			table="#__knowres_tax"
			translation_item="tax"
			type="listforeignkeytranslate"
			value_field="name"
			label="COM_KNOWRES_TAXRATE_TAX_ID_LBL"
			description="COM_KNOWRES_TAXRATE_TAX_ID_DSC"/>
		<field name="code"
			class="w-auto"
			filter="string"
			maxlength="30"
			required="true"
			type="text"
			label="COM_KNOWRES_TAXRATE_CODE_LBL"
			description="COM_KNOWRES_TAXRATE_CODE_DSC"/>
		<field name="valid_from"
			class="input-mini"
			datepicker='{"minDate": "-20Y", "maxDate": "+3Y", "altField": "#jform_valid_from"}'
			filter="string"
			required="true"
			type="uicalendar"
			label="COM_KNOWRES_TAXRATE_VALID_FROM_LBL"
			description="COM_KNOWRES_TAXRATE_VALID_FROM_DSC"/>
		<field name="basis"
			class="btn-group btn-group-yesno"
			default="0"
			filter="integer"
			required="true"
			type="radio"
			label="COM_KNOWRES_TAXRATE_BASIS_LBL"
			description="COM_KNOWRES_TAXRATE_BASIS_DSC">
			<option value="0">COM_KNOWRES_TAXRATE_BASIS_BOOKING</option>
			<option value="1">COM_KNOWRES_TAXRATE_BASIS_GUEST</option>
		</field>
		<field name="rate"
			class="w-auto"
			filter="string"
			required="true"
			table="#__knowres_tax"
			type="text"
			label="COM_KNOWRES_TAXRATE_RATE_LBL"
			description="COM_KNOWRES_TAXRATE_RATE_DSC"/>
		<field name="fixed"
			class="btn-group btn-group-yesno"
			default="0"
			required="true"
			type="radio"
			label="COM_KNOWRES_TAXRATE_FIXED_LBL"
			description="COM_KNOWRES_TAXRATE_FIXED_DSC">
			<option value="0">COM_KNOWRES_TAXRATE_FIXED_PC</option>
			<option value="1">COM_KNOWRES_TAXRATE_FIXED_VALUE</option>
		</field>
		<field name="tax_type"
			class="w-auto"
			default=""
			filter="string"
			required="true"
			type="list"
			label="COM_KNOWRES_TAXRATE_TYPE_LBL"
			description="COM_KNOWRES_TAXRATE_TYPE_DSC">
			<option value="CITY">COM_KNOWRES_TAXRATE_TYPE_CITY</option>
			<option value="LOCAL">COM_KNOWRES_TAXRATE_TYPE_LOCAL</option>
			<option value="TOURIST">COM_KNOWRES_TAXRATE_TYPE_TOURIST</option>
			<option value="VAT">COM_KNOWRES_TAXRATE_TYPE_VAT</option>
		</field>
		<field name="gross"
			class="btn-group btn-group-yesno"
			default="0"
			filter="int"
			required="true"
			type="radio"
			label="COM_KNOWRES_TAXRATE_GROSS_LBL"
			description="COM_KNOWRES_TAXRATE_GROSS_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="pay_arrival"
			class="btn-group btn-group-yesno"
			default="0"
			filter="int"
			required="true"
			showon="gross:0"
			type="radio"
			label="COM_KNOWRES_TAXRATE_PAY_ARRIVAL_LBL"
			description="COM_KNOWRES_TAXRATE_PAY_ARRIVAL_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="per_night"
			class="btn-group btn-group-yesno"
			default="0"
			required="true"
			showon="basis:1"
			type="radio"
			label="COM_KNOWRES_TAXRATE_PER_NIGHT_LBL"
			description="COM_KNOWRES_TAXRATE_PER_NIGHT_DSC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="applicable_age"
			class="input-mini"
			default="16"
			required="true"
			showon="basis:1"
			type="integer"
			first="0"
			last="17"
			step="1"
			label="COM_KNOWRES_TAXRATE_APPLICABLE_AGE_LBL"
			description="COM_KNOWRES_TAXRATE_APPLICABLE_AGE_DSC"/>
		<field name="max_nights"
			class="input-mini"
			default="7"
			required="true"
			showon="basis:1"
			type="integer"
			first="0"
			last="28"
			step="1"
			label="COM_KNOWRES_TAXRATE_MAX_NIGHTS_LBL"
			description="COM_KNOWRES_TAXRATE_MAX_NIGHTS_DSC"/>
		<field name="reduced_rate"
			class="w-auto"
			default="0.00"
			filter="string"
			showon="basis:1"
			type="text"
			label="COM_KNOWRES_TAXRATE_REDUCED_RATE_LBL"
			description="COM_KNOWRES_TAXRATE_REDUCED_RATE_DSC"/>
		<field name="taxrate_id"
			class="w-auto"
			filter="int"
			showon="basis:1"
			type="listtaxratesforvat"
			label="COM_KNOWRES_TAXRATE_TAXRATE_ID_LBL"
			description="COM_KNOWRES_TAXRATE_TAXRATE_ID_DSC">
			<option value="0">COM_KNOWRES_SELECT</option>
		</field>
		<field name="agent"
			default="0"
			key_field="id"
			layout="joomla.form.field.list-fancy-select"
			multiple="true"
			table="#__knowres_agent"
			where="state=1"
			type="listforeignkey"
			value_field="name"
			label="COM_KNOWRES_TAXRATE_AGENT_LBL"
			description="COM_KNOWRES_TAXRATE_AGENT_DSC"
			hint="COM_KNOWRES_SELECT_MULTIPLE"/>
		<field name="tt_option"
			class="btn-group"
			default="0"
			filter="int"
			showon="tax_type:TOURIST[AND]applicable_age!:0"
			type="radio"
			label="COM_KNOWRES_TAXRATE_TT_OPTION_LBL"
			description="COM_KNOWRES_TAXRATE_TT_OPTION_DSC">
			<option class="btn btn-outline-success" value="0">COM_KNOWRES_TT_0</option>
			<option class="btn btn-outline-danger" value="1">COM_KNOWRES_TT_1</option>
		</field>
	</fieldset>
	<fieldset name="krcommon">
		<field name="state"
			type="list"
			class="form-select-color-state"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="version_note"
			type="text"
			maxlength="255"
			size="45"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"/>
		<field name="version"
			type="text"
			class="input-mini"
			size="6"
			readonly="true"
			filter="unset"
			label="COM_KNOWRES_VERSION_LBL"
			description="COM_KNOWRES_VERSION_DSC"/>
		<field name="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="COM_KNOWRES_ID"
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="created_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_CREATED_AT_LBL"
			description="COM_KNOWRES_CREATED_AT_DSC"/>
		<field name="created_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_CREATED_BY_LBL"
			description="COM_KNOWRES_CREATED_BY_DSC"/>
		<field name="updated_at"
			type="calendar"
			format="%d %b %Y %H:%M:%S"
			filter="user_utc"
			readonly="true"
			label="COM_KNOWRES_UPDATED_AT_LBL"
			description="COM_KNOWRES_UPDATED_AT_DSC"/>
		<field name="updated_by"
			type="user"
			readonly="true"
			label="COM_KNOWRES_UPDATED_BY_LBL"
			description="COM_KNOWRES_UPDATED_BY_DSC"/>
		<field name="checked_out"
			type="hidden"
			filter="unset"/>
		<field name="checked_out_time"
			type="hidden"
			filter="unset"/>
		<field name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"/>
	</fieldset>
</form>