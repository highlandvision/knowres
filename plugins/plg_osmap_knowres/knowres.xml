<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="osmap" method="upgrade">
	<name>plg_osmap_knowres</name>
	<author>Highland Vision</author>
	<creationDate>2024-06-24</creationDate>
	<authorUrl>https://www.highlandvision.com</authorUrl>
	<authorEmail>hazel@highlandvision.com</authorEmail>
	<copyright>2022 Highland Vision. All rights reserved.</copyright>
	<license>https://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>5.1.0</version>
	<description>Know Reservations OsMap plugin</description>
	<files>
		<folder>language</folder>
		<filename plugin="knowres">knowres.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
			<fieldset name="xml">
				<field name="add_images"
					class="btn-group btn-yes-no"
					default="1"
					type="radio"
					label="PLG_OSMAP_KNOWRES_SETTING_ADD_IMAGES"
					description="PLG_OSMAP_KNOWRES_SETTING_ADD_IMAGES_DSC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="cat_priority"
					type="list"
					default="-1"
					label="PLG_OSMAP_KNOWRES_SETTING_PROPERTY_PRIORITY"
					description="PLG_OSMAP_KNOWRES_SETTING_PROPERTY_PRIORITY_DSC">
					<option value="-1">PLG_OSMAP_KNOWRES_OPTION_USE_PARENT_MENU</option>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1.0</option>
				</field>
				<field name="cat_changefreq"
					type="list"
					default="-1"
					label="PLG_OSMAP_KNOWRES_SETTING_PROPERTY_CHANGE_FREQ"
					description="PLG_OSMAP_KNOWRES_SETTING_PROPERTY_CHANGE_FREQ_DSC">
					<option value="-1">PLG_OSMAP_KNOWRES_OPTION_USE_PARENT_MENU</option>
					<option value="always">PLG_OSMAP_KNOWRES_OPTION_ALWAYS</option>
					<option value="hourly">PLG_OSMAP_KNOWRES_OPTION_HOURLY</option>
					<option value="daily">PLG_OSMAP_KNOWRES_OPTION_DAILY</option>
					<option value="weekly">PLG_OSMAP_KNOWRES_OPTION_WEEKLY</option>
					<option value="monthly">PLG_OSMAP_KNOWRES_OPTION_MONTHLY</option>
					<option value="yearly">PLG_OSMAP_KNOWRES_OPTION_YEARLY</option>
					<option value="never">PLG_OSMAP_KNOWRES_OPTION_NEVER</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>